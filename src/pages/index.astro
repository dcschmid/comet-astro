---
import DocsLayout from '../layouts/DocsLayout.astro';
import {
  componentCatalog,
  componentCategories,
} from '../data/component-catalog';

const catalogByCategory = componentCategories
  .map((category) => ({
    ...category,
    items: componentCatalog
      .filter((component) => component.category === category.id)
      .sort((a, b) => a.name.localeCompare(b.name)),
  }))
  .filter((category) => category.items.length > 0);

const totalComponents = componentCatalog.length;
---

<DocsLayout
  title="Comet Astro"
  description=" Build faster with production-ready, accessible Astro components. Flexible, customizable, and beautifully crafted."
>
  <div class="space-y-12">
    <!-- Hero Section -->
    <section class="text-center space-y-4 py-8">
      <div
        class="inline-block px-4 py-1 rounded-full bg-gradient-to-r from-purple-600/20 to-pink-600/20 border border-purple-500/30 text-purple-300 text-sm font-medium mb-4"
      >
        Component Library
      </div>
    </section>

    <!-- Stats -->
    <section class="grid grid-cols-1 gap-4 max-w-2xl mx-auto sm:grid-cols-3">
      <div
        class="rounded-2xl border border-slate-200 bg-white/95 p-5 text-center text-slate-900 shadow-sm dark:border-slate-800 dark:bg-slate-900/80 dark:text-slate-100"
      >
        <div class="text-3xl font-bold text-blue-600 dark:text-blue-300">
          {totalComponents}
        </div>
        <div class="text-sm font-medium text-slate-500 dark:text-slate-300">
          Component docs
        </div>
      </div>
      <div
        class="rounded-2xl border border-slate-200 bg-white/95 p-5 text-center text-slate-900 shadow-sm dark:border-slate-800 dark:bg-slate-900/80 dark:text-slate-100"
      >
        <div class="text-3xl font-bold text-purple-600 dark:text-purple-300">
          {catalogByCategory.length}
        </div>
        <div class="text-sm font-medium text-slate-500 dark:text-slate-300">
          Categories
        </div>
      </div>
      <div
        class="rounded-2xl border border-slate-200 bg-white/95 p-5 text-center text-slate-900 shadow-sm dark:border-slate-800 dark:bg-slate-900/80 dark:text-slate-100"
      >
        <div class="text-3xl font-bold text-emerald-600 dark:text-emerald-300">
          AAA
        </div>
        <div class="text-sm font-medium text-slate-500 dark:text-slate-300">
          Accessibility target
        </div>
      </div>
    </section>

    <!-- Components by Category -->
    {
      catalogByCategory.map((category) => (
        <section class="space-y-4">
          <div class="flex items-center gap-3">
            <div
              class={`text-2xl w-12 h-12 rounded-xl bg-gradient-to-br ${category.color} flex items-center justify-center`}
            >
              {category.icon}
            </div>
            <h2 class="text-2xl font-bold text-white">{category.id}</h2>
            <span class="text-sm text-gray-500">({category.items.length})</span>
          </div>
          <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            {category.items.map((component) => (
              <a
                href={`/components/${component.slug}`}
                class="group block rounded-xl border border-gray-800 bg-gray-900/50 p-5 transition-all hover:border-purple-500/50 hover:bg-gray-900 hover:shadow-lg hover:shadow-purple-500/10 hover:-translate-y-0.5"
              >
                <h3 class="text-lg font-bold text-white group-hover:text-purple-400 transition-colors mb-2">
                  {component.name}
                </h3>
                <p class="text-sm text-gray-400 leading-relaxed">
                  {component.description}
                </p>
                <div class="mt-3 flex items-center text-xs text-purple-400 font-medium">
                  View docs
                  <svg
                    class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </section>
      ))
    }

    <!-- Footer CTA -->
    <section class="text-center space-y-4 py-12 border-t border-gray-800">
      <h2 class="text-2xl font-bold text-white">Ready to build?</h2>
      <p class="text-gray-400">
        Install via npm and start using these components in your Astro project.
      </p>
      <div
        class="inline-block px-6 py-3 rounded-lg bg-gradient-to-r from-purple-600 to-pink-600 font-mono text-sm text-white shadow-lg shadow-purple-500/25"
      >
        npm install comet-astro
      </div>
    </section>
  </div>
</DocsLayout>
