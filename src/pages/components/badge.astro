---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Badge from '../../components/Badge.astro';
---

<DocsLayout
  title="Badge"
  description="Compact label for statuses, categories, or tiers."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Variants</h2>
    <div class="flex flex-wrap items-center gap-3">
      <Badge label="New" variant="primary" />
      <Badge label="Live" variant="success" />
      <Badge label="Beta" variant="warning" />
      <Badge label="Deprecated" variant="danger" />
      <Badge label="Default" variant="neutral" />
    </div>
  </section>
</DocsLayout>
