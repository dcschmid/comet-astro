---
import DocsLayout from '../../layouts/DocsLayout.astro';
import RustCrate from '../../components/RustCrate.astro';
import Table from '../../components/Table.astro';
import Headline from '../../components/Headline.astro';
import Paragraph from '../../components/Paragraph.astro';
import CodeBlock from '../../components/CodeBlock.astro';

const usageSnippet = `---
import { RustCrate } from 'comet-astro';
---

<RustCrate crate="serde" />
<RustCrate crate="tokio" variant="compact" />
<RustCrate crate="reqwest" variant="badge" />`;

const propsColumns = [
  { key: 'name', label: 'Prop' },
  { key: 'type', label: 'Type' },
  { key: 'default', label: 'Default' },
  { key: 'description', label: 'Description' },
];

const propsData = [
  {
    name: 'crate',
    type: 'string',
    default: '—',
    description: 'Crate name to display.',
  },
  {
    name: 'variant',
    type: "'default' | 'compact' | 'badge'",
    default: "'default'",
    description: 'Display variant.',
  },
  {
    name: 'showDownloads',
    type: 'boolean',
    default: 'true',
    description: 'Show download statistics.',
  },
  {
    name: 'showKeywords',
    type: 'boolean',
    default: 'true',
    description: 'Show crate keywords.',
  },
  {
    name: 'showLinks',
    type: 'boolean',
    default: 'true',
    description: 'Show crates.io, docs.rs and repository links.',
  },
  {
    name: 'className',
    type: 'string',
    default: "''",
    description: 'Additional CSS classes.',
  },
];
---

<DocsLayout
  seoTitle="RustCrate"
  seoDescription="Display Rust crate information with downloads and Cargo.toml syntax."
>
  <Headline level="h1" textSize="2xl">RustCrate</Headline>
  <section class="space-y-4">
    <Paragraph class="text-base text-slate-100">
      The RustCrate component displays information about Rust crates from
      crates.io including version, downloads, license, and a Cargo.toml
      dependency snippet.
    </Paragraph>
    <Paragraph class="text-base text-slate-200">
      Perfect for Rust documentation, library showcases, or comparing
      dependencies.
    </Paragraph>
  </section>

  <section class="mt-10 space-y-6">
    <Headline level="h2" textSize="lg" weight="bold" className="text-slate-100"
      >Props</Headline
    >
    <Table columns={propsColumns} data={propsData} responsive={true} />
  </section>

  <section class="mt-10 space-y-6">
    <Headline level="h2" textSize="lg" weight="bold" className="text-slate-100"
      >Usage</Headline
    >
    <CodeBlock code={usageSnippet} language="astro" />
  </section>

  <section class="mt-10 space-y-8">
    <Headline level="h2" textSize="lg" weight="bold" className="text-slate-100"
      >Examples</Headline
    >

    <article class="space-y-4">
      <Headline
        level="h3"
        textSize="lg"
        weight="semibold"
        className="text-slate-100">Default variant</Headline
      >
      <RustCrate crate="serde" />
    </article>

    <article class="space-y-4">
      <Headline
        level="h3"
        textSize="lg"
        weight="semibold"
        className="text-slate-100">Compact variant</Headline
      >
      <div class="space-y-2">
        <RustCrate crate="tokio" variant="compact" />
        <RustCrate crate="reqwest" variant="compact" />
      </div>
    </article>

    <article class="space-y-4">
      <Headline
        level="h3"
        textSize="lg"
        weight="semibold"
        className="text-slate-100">Badge variant</Headline
      >
      <div class="flex flex-wrap gap-2">
        <RustCrate crate="serde" variant="badge" />
        <RustCrate crate="tokio" variant="badge" />
        <RustCrate crate="anyhow" variant="badge" />
      </div>
    </article>
  </section>

  <section class="mt-10 space-y-4">
    <Headline level="h2" textSize="lg" weight="bold" className="text-slate-100"
      >API Reference</Headline
    >
    <div class="p-4 rounded-xl bg-orange-500/10 border border-orange-500/30">
      <p class="text-sm text-slate-300">
        <strong class="text-orange-300">API:</strong>
        <a
          href="https://crates.io/"
          target="_blank"
          rel="noopener"
          class="text-orange-400 hover:underline ml-1">crates.io</a
        >
        – Free, no API key required.
      </p>
    </div>
  </section>
</DocsLayout>
