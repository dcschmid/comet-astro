---
import DocsLayout from '../../layouts/DocsLayout.astro';
import FilterChips from '../../components/FilterChips.astro';

const options = [
  { id: 'design', label: 'Design' },
  { id: 'dev', label: 'Development' },
  { id: 'ops', label: 'Operations' },
  { id: 'marketing', label: 'Marketing' },
];
---

<DocsLayout
  title="FilterChips"
  description="Toggleable chip group with clear-all control."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Example</h2>
    <FilterChips label="Categories" options={options} clearLabel="Clear all" />
  </section>
</DocsLayout>
