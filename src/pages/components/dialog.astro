---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Dialog from '../../components/Dialog.astro';

const dialogId = 'demo-dialog';
---

<DocsLayout
  title="Dialog"
  description="Accessible wrapper around the HTML dialog element with trigger helpers."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Example</h2>
    <button
      data-dialog-trigger={dialogId}
      class="px-4 py-2 rounded-lg bg-purple-600 text-white hover:bg-purple-700 transition-colors"
      type="button"
    >
      Open Dialog
    </button>
    <Dialog id={dialogId} title="Example Dialog">
      <p class="text-gray-300">
        This is a native HTML dialog with custom styling.
      </p>
    </Dialog>
  </section>
</DocsLayout>
