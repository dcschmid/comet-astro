// Usage code snippets
const basicUsage = `---
import { Lightbox } from 'comet-astro';

const images = [
  {
    src: '/images/full/image1.jpg',
    thumbnail: '/images/thumb/image1.jpg',
    caption: 'Beautiful landscape',
    alt: 'Mountain landscape at sunset'
  },
  {
    src: '/images/full/image2.jpg',
    thumbnail: '/images/thumb/image2.jpg',
    caption: 'Urban architecture',
    alt: 'Modern city building'
  }
];
---

<Lightbox images={images} />`;

const advancedUsage = `---
import { Lightbox } from 'comet-astro';
---

<Lightbox
  images={images}
  variant="masonry"
  thumbnailSize="lg"
  columns={3}
  gap="lg"
  rounded="xl"
  enableZoom
  autoplay
  autoplayInterval={5000}
  animation="fade"
  showCounter
  ariaLabel="Portfolio gallery"
  closeAriaLabel="Close gallery"
/>`;

const customUsage = `---
import { Lightbox } from 'comet-astro';
---

<Lightbox variant="carousel" thumbnailSize="sm" gap="md">
  <img 
    data-lightbox-item 
    data-lightbox-src="/images/full1.jpg"
    data-lightbox-caption="Custom image 1"
    src="/images/thumb1.jpg" 
    alt="Custom thumbnail 1" 
  />
  <img 
    data-lightbox-item 
    data-lightbox-src="/images/full2.jpg"
    data-lightbox-caption="Custom image 2"
    src="/images/thumb2.jpg" 
    alt="Custom thumbnail 2" 
  />
</Lightbox>`;
---

<DocsLayout
  title="Lightbox Component"
  description="WCAG AAA compliant image gallery with overlay viewer, multiple layouts, and comprehensive accessibility features."
>
  <!-- Overview -->
  <section class="space-y-4">
    <p class="text-lg text-slate-200">
      A sophisticated image gallery component with full-screen overlay viewing,
      multiple layout variants, keyboard navigation, and comprehensive
      accessibility features including screen reader support and high contrast
      mode compatibility.
    </p>
    <div class="flex flex-wrap gap-2">
      <span
        class="inline-flex items-center rounded-full bg-green-500/10 px-3 py-1 text-xs font-medium text-green-300 ring-1 ring-inset ring-green-500/20"
      >
        WCAG AAA
      </span>
      <span
        class="inline-flex items-center rounded-full bg-blue-500/10 px-3 py-1 text-xs font-medium text-blue-300 ring-1 ring-inset ring-blue-500/20"
      >
        Touch Enabled
      </span>
      <span
        class="inline-flex items-center rounded-full bg-purple-500/10 px-3 py-1 text-xs font-medium text-purple-300 ring-1 ring-inset ring-purple-500/20"
      >
        Keyboard Nav
      </span>
      <span
        class="inline-flex items-center rounded-full bg-amber-500/10 px-3 py-1 text-xs font-medium text-amber-300 ring-1 ring-inset ring-amber-500/20"
      >
        Zoom & Pan
      </span>
    </div>
  </section>

  <!-- Quick Examples -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Quick Examples</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Basic Gallery</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
          <LightboxComponent images={basicImages.slice(0, 3)} />
        </div>
        <p class="text-xs text-slate-400">
          Click any image to open the lightbox viewer
        </p>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Compact Grid</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
          <LightboxComponent
            images={portfolioImages}
            thumbnailSize="sm"
            columns={3}
            gap="sm"
          />
        </div>
        <p class="text-xs text-slate-400">
          Smaller thumbnails in compact layout
        </p>
      </div>
    </div>
  </section>

  <!-- Layout Variants -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Layout Variants</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Grid Layout</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
          <LightboxComponent
            images={basicImages.slice(0, 4)}
            variant="grid"
            columns={2}
            thumbnailSize="sm"
          />
        </div>
        <p class="text-xs text-slate-400">
          Responsive grid layout with equal spacing
        </p>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Masonry Layout</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
          <LightboxComponent
            images={portfolioImages}
            variant="masonry"
            columns={2}
            thumbnailSize="md"
          />
        </div>
        <p class="text-xs text-slate-400">Pinterest-style masonry layout</p>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Carousel Layout</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
          <LightboxComponent
            images={basicImages}
            variant="carousel"
            thumbnailSize="md"
            gap="md"
          />
        </div>
        <p class="text-xs text-slate-400">Horizontal scrolling carousel</p>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">List Layout</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
          <LightboxComponent
            images={basicImages.slice(0, 3)}
            variant="list"
            showCaptions
          />
        </div>
        <p class="text-xs text-slate-400">Vertical list with descriptions</p>
      </div>
    </div>
  </section>

  <!-- Size Options -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Thumbnail Sizes</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Small</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-4">
          <LightboxComponent
            images={basicImages.slice(0, 2)}
            thumbnailSize="sm"
            columns={2}
          />
        </div>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Medium</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-4">
          <LightboxComponent
            images={basicImages.slice(0, 2)}
            thumbnailSize="md"
            columns={2}
          />
        </div>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Large</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-4">
          <LightboxComponent
            images={basicImages.slice(0, 1)}
            thumbnailSize="lg"
            columns={1}
          />
        </div>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Extra Large</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-4">
          <LightboxComponent
            images={basicImages.slice(0, 1)}
            thumbnailSize="xl"
            columns={1}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Advanced Features -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Advanced Features</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">With Autoplay</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
          <LightboxComponent
            images={basicImages.slice(0, 3)}
            autoplay
            autoplayInterval={4000}
            showCounter
            thumbnailSize="sm"
            columns={3}
          />
        </div>
        <p class="text-xs text-slate-400">
          Automatic slideshow with play/pause controls
        </p>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Custom Styling</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
          <LightboxComponent
            images={portfolioImages}
            rounded="xl"
            gap="lg"
            columns={3}
            thumbnailSize="sm"
            enableZoom
          />
        </div>
        <p class="text-xs text-slate-400">
          Rounded corners, zoom enabled, large gaps
        </p>
      </div>
    </div>
  </section>

  <!-- Animation Effects -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Animation Effects</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Fade Transition</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-4">
          <LightboxComponent
            images={basicImages.slice(0, 2)}
            animation="fade"
            thumbnailSize="sm"
            columns={2}
          />
        </div>
        <p class="text-xs text-slate-400">
          Smooth fade transition between images
        </p>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Slide Transition</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-4">
          <LightboxComponent
            images={basicImages.slice(0, 2)}
            animation="slide"
            thumbnailSize="sm"
            columns={2}
          />
        </div>
        <p class="text-xs text-slate-400">Sliding animation between images</p>
      </div>

      <div class="space-y-4">
        <h3 class="text-base font-medium text-slate-200">Zoom Transition</h3>
        <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-4">
          <LightboxComponent
            images={basicImages.slice(0, 2)}
            animation="zoom"
            thumbnailSize="sm"
            columns={2}
          />
        </div>
        <p class="text-xs text-slate-400">Zoom effect during transitions</p>
      </div>
    </div>
  </section>

  <!-- Props Documentation -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Props</h2>
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div
        class="space-y-1 rounded-lg border border-slate-700/75 bg-slate-900/60 p-4 shadow-sm"
      >
        <dt
          class="text-sm font-semibold uppercase tracking-wide text-slate-200"
        >
          Content
        </dt>
        <dd class="text-sm text-slate-200">
          <code>images?</code>, <code>showCaptions?</code>, <code
            >showCounter?</code
          > - Control displayed content and metadata.
        </dd>
      </div>

      <div
        class="space-y-1 rounded-lg border border-slate-700/75 bg-slate-900/60 p-4 shadow-sm"
      >
        <dt
          class="text-sm font-semibold uppercase tracking-wide text-slate-200"
        >
          Layout
        </dt>
        <dd class="text-sm text-slate-200">
          <code>variant?</code>, <code>columns?</code>, <code>gap?</code>, <code
            >thumbnailSize?</code
          > - Control gallery layout and spacing.
        </dd>
      </div>

      <div
        class="space-y-1 rounded-lg border border-slate-700/75 bg-slate-900/60 p-4 shadow-sm"
      >
        <dt
          class="text-sm font-semibold uppercase tracking-wide text-slate-200"
        >
          Appearance
        </dt>
        <dd class="text-sm text-slate-200">
          <code>rounded?</code>, <code>animation?</code>, <code>className?</code
          > - Control visual styling and effects.
        </dd>
      </div>

      <div
        class="space-y-1 rounded-lg border border-slate-700/75 bg-slate-900/60 p-4 shadow-sm"
      >
        <dt
          class="text-sm font-semibold uppercase tracking-wide text-slate-200"
        >
          Behavior
        </dt>
        <dd class="text-sm text-slate-200">
          <code>enableZoom?</code>, <code>autoplay?</code>, <code
            >touchNavigation?</code
          > - Control interactive features.
        </dd>
      </div>
    </dl>
  </section>

  <!-- Image Object Structure -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Image Object Structure</h2>
    <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
      <pre
        class="text-sm text-slate-200 overflow-x-auto">
        <code>{`interface LightboxImage {
  src: string;              // Full-size image URL (required)
  alt?: string;             // Alt text for accessibility
  thumbnail?: string;       // Smaller thumbnail URL (optional)
  caption?: string;         // Short caption displayed in gallery
  description?: string;     // Longer description for lightbox view
}`}</code>
      </pre>
    </div>
  </section>

  <!-- Usage -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Usage</h2>
    <p class="text-base text-slate-200">
      The Lightbox component provides a complete gallery solution with full
      accessibility support, touch gestures, keyboard navigation, and multiple
      layout options for any type of image collection.
    </p>

    <div class="space-y-4">
      <h3 class="text-lg font-medium text-slate-100">Basic Gallery</h3>
      <pre
        class="overflow-x-auto rounded-lg border border-slate-700/70 bg-slate-950/80 p-4 text-sm text-slate-50 shadow-inner">
        <code class="language-astro">{basicUsage}</code>
      </pre>
    </div>

    <div class="space-y-4">
      <h3 class="text-lg font-medium text-slate-100">Advanced Features</h3>
      <pre
        class="overflow-x-auto rounded-lg border border-slate-700/70 bg-slate-950/80 p-4 text-sm text-slate-50 shadow-inner">
        <code class="language-astro">{advancedUsage}</code>
      </pre>
    </div>

    <div class="space-y-4">
      <h3 class="text-lg font-medium text-slate-100">Custom Content</h3>
      <pre
        class="overflow-x-auto rounded-lg border border-slate-700/70 bg-slate-950/80 p-4 text-sm text-slate-50 shadow-inner">
        <code class="language-astro">{customUsage}</code>
      </pre>
    </div>
  </section>

  <!-- Keyboard Shortcuts -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Keyboard Shortcuts</h2>
    <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div
          class="flex justify-between items-center py-2 border-b border-slate-700/30"
        >
          <dt class="font-medium text-slate-200">Open Lightbox</dt>
          <dd
            class="font-mono text-sm bg-slate-700 px-2 py-1 rounded text-slate-200"
          >
            Enter / Space
          </dd>
        </div>
        <div
          class="flex justify-between items-center py-2 border-b border-slate-700/30"
        >
          <dt class="font-medium text-slate-200">Close Lightbox</dt>
          <dd
            class="font-mono text-sm bg-slate-700 px-2 py-1 rounded text-slate-200"
          >
            Escape
          </dd>
        </div>
        <div
          class="flex justify-between items-center py-2 border-b border-slate-700/30"
        >
          <dt class="font-medium text-slate-200">Next Image</dt>
          <dd
            class="font-mono text-sm bg-slate-700 px-2 py-1 rounded text-slate-200"
          >
            → / Space
          </dd>
        </div>
        <div
          class="flex justify-between items-center py-2 border-b border-slate-700/30"
        >
          <dt class="font-medium text-slate-200">Previous Image</dt>
          <dd
            class="font-mono text-sm bg-slate-700 px-2 py-1 rounded text-slate-200"
          >
            ←
          </dd>
        </div>
        <div
          class="flex justify-between items-center py-2 border-b border-slate-700/30"
        >
          <dt class="font-medium text-slate-200">First Image</dt>
          <dd
            class="font-mono text-sm bg-slate-700 px-2 py-1 rounded text-slate-200"
          >
            Home
          </dd>
        </div>
        <div
          class="flex justify-between items-center py-2 border-b border-slate-700/30"
        >
          <dt class="font-medium text-slate-200">Last Image</dt>
          <dd
            class="font-mono text-sm bg-slate-700 px-2 py-1 rounded text-slate-200"
          >
            End
          </dd>
        </div>
      </dl>
    </div>
  </section>

  <!-- Accessibility -->
  <section class="mt-10 space-y-6">
    <h2 class="text-xl font-semibold text-slate-100">Accessibility</h2>
    <div class="rounded-lg border border-slate-700/50 bg-slate-800/30 p-6">
      <ul class="space-y-3 text-sm text-slate-200">
        <li class="flex items-start gap-3">
          <span class="text-green-400">✓</span>
          <span
            ><strong>WCAG AAA Compliance:</strong> All interactive elements meet
            7:1+ contrast ratios with proper focus indicators</span
          >
        </li>
        <li class="flex items-start gap-3">
          <span class="text-green-400">✓</span>
          <span
            ><strong>Keyboard Navigation:</strong> Complete keyboard control with
            intuitive shortcuts and proper focus management</span
          >
        </li>
        <li class="flex items-start gap-3">
          <span class="text-green-400">✓</span>
          <span
            ><strong>Screen Reader Support:</strong> Live announcements, proper ARIA
            attributes, and descriptive labels</span
          >
        </li>
        <li class="flex items-start gap-3">
          <span class="text-green-400">✓</span>
          <span
            ><strong>Touch Accessibility:</strong> Swipe gestures and touch-friendly
            controls with proper target sizes</span
          >
        </li>
        <li class="flex items-start gap-3">
          <span class="text-green-400">✓</span>
          <span
            ><strong>High Contrast Mode:</strong> Enhanced visibility in high contrast
            accessibility displays</span
          >
        </li>
        <li class="flex items-start gap-3">
          <span class="text-green-400">✓</span>
          <span
            ><strong>Reduced Motion:</strong> Respects user's motion preferences
