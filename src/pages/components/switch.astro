---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Switch from '../../components/Switch.astro';
---

<DocsLayout
  title="Switch"
  description="Toggle control with size variants and accessible labels."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Examples</h2>
    <div class="space-y-3">
      <Switch name="notifications" label="Enable notifications" checked />
      <Switch name="darkmode" label="Dark mode" size="sm" />
      <Switch name="public" label="Make profile public" size="lg" />
    </div>
  </section>
</DocsLayout>
