---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Checkbox from '../../components/Checkbox.astro';
---

<DocsLayout
  title="Checkbox"
  description="Styled checkbox supporting indeterminate, disabled, and helper text."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Examples</h2>
    <div class="space-y-3">
      <Checkbox name="terms" label="I agree to the terms" />
      <Checkbox name="newsletter" label="Subscribe to newsletter" checked />
      <Checkbox name="disabled" label="Disabled option" disabled />
    </div>
  </section>
</DocsLayout>
