---
import DocsLayout from '../../layouts/DocsLayout.astro';
import TikTokEmbed from '../../components/TikTokEmbed.astro';
import CodeBlock from '../../components/CodeBlock.astro';
import Tabs from '../../components/Tabs.astro';
import Card from '../../components/Card.astro';
import Badge from '../../components/Badge.astro';
import Callout from '../../components/Callout.astro';
---

<DocsLayout title="TikTokEmbed Component">
  <div class="space-y-8">
    <!-- Header -->
    <div class="border-b border-slate-200 dark:border-slate-800 pb-8">
      <div class="flex items-center gap-3 mb-4">
        <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100">
          TikTokEmbed
        </h1>
        <Badge variant="outline">Media</Badge>
      </div>
      <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl">
        A WCAG AAA compliant TikTok video embed component with responsive
        design, multiple variants, loading states, privacy options, and
        comprehensive accessibility features. Built on top of EmbedBase for
        consistent behavior and styling across all embed components.
      </p>
    </div>

    <!-- Quick Start -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">
        Quick Start
      </h2>
      <div class="grid gap-6">
        <Card>
          <div class="flex justify-center p-6">
            <TikTokEmbed
              videoId="7235914486921790752"
              caption="Conference keynote highlights from the Comet launch event"
            />
          </div>
        </Card>
        <CodeBlock
          language="astro"
          code={`---
import TikTokEmbed from './components/TikTokEmbed.astro';
---

<TikTokEmbed
  videoId="7235914486921790752"
  caption="Conference keynote highlights"
/>`}
        />
      </div>
    </section>

    <!-- Variants -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">
        Variants
      </h2>
      <p class="text-slate-600 dark:text-slate-400">
        Four distinct visual styles optimized for different design contexts.
      </p>

      <Tabs variant="pills" size="sm">
        <div slot="tab-1">
          <span>Default</span>
        </div>
        <div slot="panel-1">
          <Card>
            <div class="flex justify-center p-6">
              <TikTokEmbed
                variant="default"
                videoId="7235914486921790752"
                size="sm"
                caption="Default variant with clean borders"
              />
            </div>
          </Card>
          <CodeBlock
            language="astro"
            code={`<TikTokEmbed
  variant="default"
  videoId="7235914486921790752"
  caption="Default variant with clean borders"
/>`}
          />
        </div>

        <div slot="tab-2">
          <span>Minimal</span>
        </div>
        <div slot="panel-2">
          <Card>
