      </Card>

      <CodeBlock
        language="astro"
        code={`<!-- Aspect ratio options -->
<TikTokEmbed aspectRatio="9:16" videoId="..." />
<TikTokEmbed aspectRatio="1:1" videoId="..." />
<TikTokEmbed aspectRatio="16:9" videoId="..." />`}
      />
    </section>

    <!-- Privacy & Settings -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">
        Privacy & Settings
      </h2>
      <p class="text-slate-600 dark:text-slate-400">
        Control privacy, loading behavior, and video features.
      </p>

      <Card>
        <div class="grid md:grid-cols-2 gap-6 p-6">
          <div class="space-y-2">
            <h3 class="text-sm font-medium text-slate-900 dark:text-slate-100">
              Privacy Mode
            </h3>
            <TikTokEmbed
              privacyMode={true}
              size="sm"
              videoId="7235914486921790752"
              caption="Enhanced privacy with no-referrer policy"
            />
          </div>

          <div class="space-y-2">
            <h3 class="text-sm font-medium text-slate-900 dark:text-slate-100">
              Eager Loading
            </h3>
            <TikTokEmbed
              loading="eager"
              size="sm"
              videoId="7235914486921790752"
              caption="Loads immediately for above-the-fold content"
            />
          </div>
        </div>
      </Card>

      <CodeBlock
        language="astro"
        code={`<!-- Privacy and loading options -->
<TikTokEmbed privacyMode={true} videoId="..." />
<TikTokEmbed loading="eager" videoId="..." />
<TikTokEmbed showControls={false} videoId="..." />
<TikTokEmbed autoplay={true} videoId="..." />`}
      />
    </section>

    <!-- Localization -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">
        Localization
      </h2>
      <p class="text-slate-600 dark:text-slate-400">
        Support for different languages and regions.
      </p>

      <Card>
        <div class="grid md:grid-cols-3 gap-6 p-6">
          <div class="space-y-2">
            <h3 class="text-sm font-medium text-slate-900 dark:text-slate-100">
              English
            </h3>
            <TikTokEmbed
              lang="en"
              size="sm"
              videoId="7235914486921790752"
              caption="English interface"
            />
          </div>

          <div class="space-y-2">
            <h3 class="text-sm font-medium text-slate-900 dark:text-slate-100">
