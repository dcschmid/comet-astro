              caption="Interfaz en español"
            />
          </div>
        </div>
      </Card>

      <CodeBlock
        language="astro"
        code={`<!-- Language options -->
<TikTokEmbed lang="en" videoId="..." />
<TikTokEmbed lang="de" videoId="..." />
<TikTokEmbed lang="es" videoId="..." />
<TikTokEmbed lang="fr" videoId="..." />`}
      />
    </section>

    <!-- Props -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">
        Props
