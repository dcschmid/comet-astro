---
import DocsLayout from '../../layouts/DocsLayout.astro';
import SearchBar from '../../components/SearchBar.astro';
import CodeBlock from '../../components/CodeBlock.astro';
---

<DocsLayout
  title="SearchBar"
  description="Accessible search form with WCAG AAA compliance, multiple variants, live suggestions, and comprehensive search functionality."
>
  <div class="space-y-12">
    <!-- Basic Example -->
    <section class="space-y-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        Basic Example
      </h2>
      <div class="not-prose space-y-4">
        <SearchBar
          action="/search"
          placeholder="Search components, documentation, examples..."
          submitLabel="Search"
          label="Site Search"
          helpText="Search across all components and documentation"
        />
      </div>

      <CodeBlock
        code={`<SearchBar
  action="/search"
  placeholder="Search components, documentation, examples..."
  submitLabel="Search"
  label="Site Search"
  helpText="Search across all components and documentation"
/>`}
        language="astro"
      />
    </section>

    <!-- Variants -->
    <section class="space-y-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        Variants
      </h2>

      <div class="space-y-8">
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Default
          </h3>
          <div class="not-prose">
            <SearchBar
              variant="default"
              placeholder="Default search style..."
              label="Default Search"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Minimal
          </h3>
          <div class="not-prose">
            <SearchBar
              variant="minimal"
              placeholder="Minimal and clean..."
              label="Minimal Search"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Outlined
          </h3>
          <div class="not-prose">
            <SearchBar
              variant="outlined"
              placeholder="Bold outlined borders..."
              label="Outlined Search"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Filled
          </h3>
          <div class="not-prose">
            <SearchBar
              variant="filled"
              placeholder="Filled background style..."
              label="Filled Search"
            />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Default variant -->
<SearchBar variant="default" />

<!-- Minimal variant -->
<SearchBar variant="minimal" />

<!-- Outlined variant -->
<SearchBar variant="outlined" />

<!-- Filled variant -->
<SearchBar variant="filled" />`}
        language="astro"
      />
    </section>

    <!-- Sizes -->
    <section class="space-y-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Sizes</h2>

      <div class="space-y-8">
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Small
          </h3>
          <div class="not-prose">
            <SearchBar
              size="sm"
              placeholder="Compact search..."
              label="Small Search"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Medium (Default)
          </h3>
          <div class="not-prose">
            <SearchBar
              size="md"
              placeholder="Standard search size..."
              label="Medium Search"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Large
          </h3>
          <div class="not-prose">
            <SearchBar
              size="lg"
              placeholder="Large, prominent search..."
              label="Large Search"
            />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Small size -->
<SearchBar size="sm" />

<!-- Medium size (default) -->
<SearchBar size="md" />

<!-- Large size -->
<SearchBar size="lg" />`}
        language="astro"
      />
    </section>

    <!-- Features -->
    <section class="space-y-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        Features
      </h2>

      <div class="space-y-8">
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            With Search Icon
          </h3>
          <div class="not-prose">
            <SearchBar
              showIcon={true}
              placeholder="Search with icon..."
              label="Icon Search"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Without Submit Button
          </h3>
          <div class="not-prose">
            <SearchBar
              showButton={false}
              placeholder="Icon only search..."
              label="Icon Only Search"
              helpText="Press Enter to search"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            With Live Suggestions
          </h3>
          <div class="not-prose">
            <SearchBar
              enableSuggestions={true}
              placeholder="Type to see suggestions..."
              label="Smart Search"
              helpText="Start typing to see search suggestions"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Minimal Configuration
          </h3>
          <div class="not-prose">
            <SearchBar
              showIcon={false}
              showButton={false}
              variant="filled"
              placeholder="Clean, minimal search..."
              label="Minimal Search"
            />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- With search icon -->
<SearchBar showIcon={true} />

<!-- Without submit button -->
<SearchBar showButton={false} />

<!-- With live suggestions -->
<SearchBar enableSuggestions={true} />

<!-- Minimal configuration -->
<SearchBar 
  showIcon={false} 
  showButton={false} 
  variant="filled" 
/>`}
        language="astro"
      />
    </section>

    <!-- States -->
    <section class="space-y-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        States
      </h2>

      <div class="space-y-8">
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Required
          </h3>
          <div class="not-prose">
            <SearchBar
              required={true}
              label="Required Search"
              placeholder="This field is required..."
              helpText="Please enter a search term"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Error
          </h3>
          <div class="not-prose">
            <SearchBar
              error="Search query must be at least 3 characters long"
              label="Search with Error"
              placeholder="Enter search term..."
              value="ab"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Disabled
          </h3>
          <div class="not-prose">
            <SearchBar
              disabled={true}
              label="Disabled Search"
              placeholder="Search is disabled..."
              helpText="Search functionality is currently unavailable"
            />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Required state -->
<SearchBar required={true} />

<!-- Error state -->
<SearchBar error="Search query too short" />

<!-- Disabled state -->
<SearchBar disabled={true} />`}
        language="astro"
      />
    </section>

    <!-- Form Integration -->
    <section class="space-y-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        Form Integration
      </h2>

      <div class="space-y-8">
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            GET Method (Default)
          </h3>
          <div class="not-prose">
            <SearchBar
              method="get"
              action="/search"
              name="query"
              placeholder="Search with GET..."
              label="GET Search"
              helpText="Submits as URL parameters"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            POST Method
          </h3>
          <div class="not-prose">
            <SearchBar
              method="post"
              action="/api/search"
              name="searchTerm"
              placeholder="Search with POST..."
              label="POST Search"
              helpText="Submits as form data"
            />
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Custom Labels
          </h3>
          <div class="not-prose">
            <SearchBar
              submitLabel="Find Results"
              ariaLabel="Search the knowledge base"
              placeholder="Search knowledge base..."
              label="Knowledge Base Search"
            />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- GET method (default) -->
<SearchBar 
  method="get"
  action="/search"
  name="query"
/>

<!-- POST method -->
<SearchBar 
  method="post"
  action="/api/search"
  name="searchTerm"
/>

<!-- Custom labels -->
<SearchBar 
  submitLabel="Find Results"
  ariaLabel="Search the knowledge base"
/>`}
        language="astro"
      />
    </section>

    <!-- Props Reference -->
    <section class="space-y-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        Props Reference
      </h2>

      <div class="overflow-x-auto">
        <table
          class="w-full border-collapse border border-gray-300 dark:border-gray-600"
        >
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-700">
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-left text-sm font-semibold text-gray-900 dark:text-gray-100"
              >
                Prop
              </th>
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-left text-sm font-semibold text-gray-900 dark:text-gray-100"
              >
                Type
              </th>
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-left text-sm font-semibold text-gray-900 dark:text-gray-100"
              >
                Default
              </th>
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-2 text-left text-sm font-semibold text-gray-900 dark:text-gray-100"
              >
                Description
              </th>
            </tr>
          </thead>
          <tbody class="text-sm">
            <tr>
              <td
                class="border border-gray-300 dark:border-gray-600 px-4 py-2 font-mono text-purple-600 dark:text-purple-300"
