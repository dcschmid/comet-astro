---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Popover from '../../components/Popover.astro';
import Button from '../../components/Button.astro';
---

<DocsLayout
  title="Popover"
  description="Contextual bubble anchored to a trigger with directional placement."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Example</h2>
    <Popover
      content="Teams on the Pro plan gain access to automation and API usage."
      placement="right"
    >
      <Button variant="ghost">Hover or focus me</Button>
    </Popover>
  </section>
</DocsLayout>
