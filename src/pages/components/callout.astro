---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Callout from '../../components/Callout.astro';
---

<DocsLayout
  title="Callout"
  description="Highlight important information with contextual accent colors."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Variants</h2>
    <div class="space-y-3">
      <Callout variant="info" title="Info"
        >This is important information</Callout
      >
      <Callout variant="success" title="Success"
        >Task completed successfully</Callout
      >
      <Callout variant="warning" title="Warning">Please be careful</Callout>
      <Callout variant="error" title="Error">Something went wrong</Callout>
      <Callout variant="note">Simple note without title</Callout>
    </div>
  </section>
</DocsLayout>
