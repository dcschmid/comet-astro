---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Textarea from '../../components/Textarea.astro';
import CodeBlock from '../../components/CodeBlock.astro';
import Tabs from '../../components/Tabs.astro';
import Card from '../../components/Card.astro';
import Badge from '../../components/Badge.astro';
import Callout from '../../components/Callout.astro';
---

<DocsLayout seoTitle="Textarea Component">
  <div class="space-y-8">
    <!-- Header -->
    <div class="border-b border-slate-200 dark:border-slate-800 pb-8">
      <div class="flex items-center gap-3 mb-4">
        <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100">
          Textarea
        </h1>
        <Badge variant="outline">Form</Badge>
      </div>
      <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl">
        A WCAG AAA compliant multi-line text input component with comprehensive
        accessibility features, multiple variants, size options, auto-grow
        functionality, and character counting support.
      </p>
    </div>

    <!-- Quick Start -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">
        Quick Start
      </h2>
      <div class="grid gap-6">
        <Card>
          <div class="space-y-4">
            <Textarea
              label="Message"
              placeholder="Enter your message..."
              helperText="Please provide detailed information"
            />
          </div>
        </Card>
        <CodeBlock
          language="astro"
          code={`---
import Textarea from './components/Textarea.astro';
---

<Textarea
  label="Message"
  placeholder="Enter your message..."
  helperText="Please provide detailed information"
/>`}
        />
      </div>
    </section>

    <!-- Variants -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">
        Variants
      </h2>
      <p class="text-slate-600 dark:text-slate-400">
        Four distinct visual styles optimized for different design contexts.
      </p>

      <Tabs variant="pills" size="sm">
        <div slot="tab-1">
          <span>Default</span>
        </div>
        <div slot="panel-1">
          <Card>
            <div class="space-y-6">
              <Textarea
                variant="default"
                label="Default Textarea"
                placeholder="Standard bordered textarea..."
                helperText="Clean and professional design"
              />
            </div>
          </Card>
          <CodeBlock
            language="astro"
            code={`<Textarea
  variant="default"
  label="Default Textarea"
  placeholder="Standard bordered textarea..."
  helperText="Clean and professional design"
/>`}
          />
        </div>

        <div slot="tab-2">
          <span>Minimal</span>
        </div>
        <div slot="panel-2">
          <Card>
            <div class="space-y-6">
              <Textarea
                variant="minimal"
                label="Minimal Textarea"
                placeholder="Minimal bottom-border style..."
                helperText="Subtle and space-efficient"
              />
            </div>
          </Card>
          <CodeBlock
            language="astro"
            code={`<Textarea
  variant="minimal"
  label="Minimal Textarea"
  placeholder="Minimal bottom-border style..."
  helperText="Subtle and space-efficient"
/>`}
          />
        </div>

        <div slot="tab-3">
          <span>Bordered</span>
        </div>
        <div slot="panel-3">
          <Card>
            <div class="space-y-6">
              <Textarea
                variant="bordered"
                label="Bordered Textarea"
                placeholder="Enhanced border design..."
                helperText="Prominent border styling"
              />
            </div>
          </Card>
          <CodeBlock
            language="astro"
            code={`<Textarea
  variant="bordered"
  label="Bordered Textarea"
  placeholder="Enhanced border design..."
  helperText="Prominent border styling"
/>`}
          />
        </div>

        <div slot="tab-4">
          <span>Filled</span>
        </div>
        <div slot="panel-4">
          <Card>
            <div class="space-y-6">
              <Textarea
                variant="filled"
                label="Filled Textarea"
                placeholder="Filled background style..."
                helperText="Enhanced visual presence"
              />
            </div>
          </Card>
          <CodeBlock
            language="astro"
            code={`<Textarea
  variant="filled"
  label="Filled Textarea"
  placeholder="Filled background style..."
  helperText="Enhanced visual presence"
/>`}
          />
        </div>
      </Tabs>
    </section>

    <!-- Sizes -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">
        Sizes
      </h2>
      <p class="text-slate-600 dark:text-slate-400">
        Three size options to match your interface hierarchy.
      </p>

      <Card>
        <div class="space-y-6">
          <div class="space-y-2">
            <h3 class="text-sm font-medium text-slate-900 dark:text-slate-100">
              Small
            </h3>
            <Textarea
              size="sm"
              label="Small Textarea"
              placeholder="Compact size for dense layouts..."
              rows={3}
            />
          </div>

          <div class="space-y-2">
            <h3 class="text-sm font-medium text-slate-900 dark:text-slate-100">
              Medium (Default)
            </h3>
            <Textarea
              size="md"
              label="Medium Textarea"
              placeholder="Standard size for most use cases..."
              rows={4}
            />
          </div>

          <div class="space-y-2">
            <h3 class="text-sm font-medium text-slate-900 dark:text-slate-100">
              Large
            </h3>
            <Textarea
              size="lg"
              label="Large Textarea"
              placeholder="Large size for prominent forms..."
              rows={5}
            />
          </div>
        </div>
      </Card>

      <CodeBlock
        language="astro"
        code={`<!-- Size variants -->
<Textarea size="sm" label="Small" placeholder="Compact..." />
<Textarea size="md" label="Medium" placeholder="Standard..." />
<Textarea size="lg" label="Large" placeholder="Prominent..." />`}
      />
    </section>

    <!-- Resize Options -->
    <section class="space-y-4">
