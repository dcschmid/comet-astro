        language="astro"
        code={`<!-- Resize options -->
<Textarea resize="none" label="Fixed" />
<Textarea resize="vertical" label="Vertical Only" />
<Textarea resize="horizontal" label="Horizontal Only" />
<Textarea resize="both" label="Both Directions" />`}
