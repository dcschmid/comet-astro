---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Button from '../../components/Button.astro';
import CodeBlock from '../../components/CodeBlock.astro';

const title = 'Navbar Component';
const description =
  'WCAG AAA compliant responsive navigation with mobile toggle and customizable styling.';

// Example navigation items
const basicNavItems = [
  { href: '#home', label: 'Home' },
  { href: '#about', label: 'About' },
  { href: '#services', label: 'Services' },
  { href: '#contact', label: 'Contact' },
];

const externalNavItems = [
  { href: '#home', label: 'Home' },
  { href: '#docs', label: 'Docs' },
  { href: 'https://github.com', label: 'GitHub', external: true },
  { href: 'https://twitter.com', label: 'Twitter', external: true },
];

const activeNavItems = [
  { href: '#home', label: 'Home', active: true },
  { href: '#about', label: 'About' },
  { href: '#services', label: 'Services' },
  { href: '#contact', label: 'Contact' },
];
---

<DocsLayout seoTitle={title} seoDescription={description}>
  <div class="space-y-12">
    <!-- Introduction -->
    <section>
      <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
        The Navbar component provides a responsive, accessible navigation header
        with mobile menu support. It includes brand/logo display, navigation
        links, and customizable action slots.
      </p>
    </section>

    <!-- Basic Usage -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Basic Usage
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Comet" items={basicNavItems}>
              <Button slot="actions" variant="primary" size="sm">
                Get Started
              </Button>
            </Navbar>
          </div>
        </div>
      </div>

      <CodeBlock
        code={`const navItems = [
  { href: '#home', label: 'Home' },
  { href: '#about', label: 'About' },
  { href: '#services', label: 'Services' },
  { href: '#contact', label: 'Contact' }
];

<Navbar brand="Comet" items={navItems}>
  <Button slot="actions" variant="primary" size="sm">
    Get Started
  </Button>
</Navbar>`}
        lang="astro"
      />
    </section>

    <!-- Variants -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Variants
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Default
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Default" items={basicNavItems} variant="default" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Minimal
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Minimal" items={basicNavItems} variant="minimal" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Glass
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden bg-linear-to-r from-blue-100 to-purple-100 dark:from-blue-900 dark:to-purple-900"
          >
            <Navbar brand="Glass" items={basicNavItems} variant="glass" />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Default variant - solid background with border -->
<Navbar brand="MyApp" items={navItems} variant="default" />

<!-- Minimal variant - transparent background -->
<Navbar brand="MyApp" items={navItems} variant="minimal" />

<!-- Glass variant - frosted glass effect -->
<Navbar brand="MyApp" items={navItems} variant="glass" />`}
        lang="astro"
      />
    </section>

    <!-- Positions -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Position Options
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Static (Default)
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Static" items={basicNavItems} position="static" />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Normal document flow positioning
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Sticky
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Sticky" items={basicNavItems} position="sticky" />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Sticks to top when scrolling
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Fixed
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Fixed" items={basicNavItems} position="fixed" />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Always fixed at top of viewport
          </p>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Static positioning (default) -->
<Navbar items={navItems} position="static" />

<!-- Sticky positioning - sticks to top when scrolling -->
<Navbar items={navItems} position="sticky" />

<!-- Fixed positioning - always at top -->
<Navbar items={navItems} position="fixed" />`}
        lang="astro"
      />
    </section>

    <!-- Max Width Options -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Container Widths
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Small (max-w-2xl)
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Small" items={basicNavItems} maxWidth="sm" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Large (max-w-6xl)
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Large" items={basicNavItems} maxWidth="lg" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Full Width (no max-width)
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Full" items={basicNavItems} maxWidth="full" />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Different container widths -->
<Navbar items={navItems} maxWidth="sm" />   <!-- max-w-2xl -->
<Navbar items={navItems} maxWidth="md" />   <!-- max-w-4xl -->
<Navbar items={navItems} maxWidth="lg" />   <!-- max-w-6xl -->
<Navbar items={navItems} maxWidth="xl" />   <!-- max-w-7xl (default) -->
<Navbar items={navItems} maxWidth="full" /> <!-- no max-width -->`}
        lang="astro"
      />
    </section>

    <!-- Navigation Features -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Navigation Features
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            External Links
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="External" items={externalNavItems} />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            External links show an indicator and open in new window
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Active Page
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Active" items={activeNavItems} />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Active page is highlighted and announced to screen readers
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Custom Brand Link
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Custom" brandHref="/custom" items={basicNavItems} />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Brand can link to custom URL instead of homepage
          </p>
        </div>
      </div>

      <CodeBlock
        code={`// External links with indicators
const externalItems = [
  { href: '#home', label: 'Home' },
  { href: 'https://github.com', label: 'GitHub', external: true }
];

// Active page highlighting
const activeItems = [
  { href: '#home', label: 'Home', active: true },
  { href: '#about', label: 'About' }
];

<Navbar 
  brand="MyApp" 
  brandHref="/custom"
  items={externalItems} 
/>`}
        lang="astro"
      />
    </section>

    <!-- Action Slots -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Action Slots
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Single Action
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Single" items={basicNavItems}>
              <Button slot="actions" variant="primary" size="sm">
                Sign Up
              </Button>
            </Navbar>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Multiple Actions
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Multiple" items={basicNavItems}>
              <div slot="actions" class="flex items-center gap-2">
                <Button variant="ghost" size="sm"> Login </Button>
                <Button variant="primary" size="sm"> Sign Up </Button>
              </div>
            </Navbar>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Theme Toggle
          </h3>
          <div
            class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden"
          >
            <Navbar brand="Theme" items={basicNavItems}>
              <button
                slot="actions"
                class="p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-gray-100 dark:hover:bg-gray-700 transition-colors"
                aria-label="Toggle theme"
              >
                <span class="text-lg">üåô</span>
              </button>
            </Navbar>
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Single action button -->
<Navbar brand="MyApp" items={navItems}>
  <Button slot="actions" variant="primary" size="sm">
    Sign Up
  </Button>
</Navbar>

<!-- Multiple actions -->
<Navbar brand="MyApp" items={navItems}>
  <div slot="actions" class="flex items-center gap-2">
    <Button variant="ghost" size="sm">Login</Button>
    <Button variant="primary" size="sm">Sign Up</Button>
  </div>
</Navbar>

<!-- Custom elements -->
<Navbar brand="MyApp" items={navItems}>
  <button slot="actions" class="..." aria-label="Toggle theme">
    üåô
  </button>
</Navbar>`}
        lang="astro"
      />
    </section>

    <!-- Accessibility -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Accessibility Features
      </h2>

      <div
        class="bg-blue-50 dark:bg-blue-950 border border-blue-200 dark:border-blue-800 rounded-lg p-6 mb-8"
      >
        <h3 class="text-lg font-medium text-blue-900 dark:text-blue-100 mb-4">
          WCAG AAA Compliance
        </h3>
        <ul class="list-disc pl-6 space-y-2 text-blue-800 dark:text-blue-200">
          <li>Touch targets meet minimum 44px requirement</li>
          <li>Color contrast ratios exceed 7:1 for WCAG AAA standards</li>
          <li>Keyboard navigation with Tab, Enter, and Escape keys</li>
          <li>Screen reader support with proper ARIA labels and landmarks</li>
          <li>Focus management when opening/closing mobile menu</li>
          <li>Active page indication with aria-current="page"</li>
          <li>External link announcements for screen readers</li>
          <li>Semantic HTML with proper header, nav, and list structure</li>
          <li>Mobile menu toggle with proper aria-expanded state</li>
        </ul>
      </div>
    </section>

    <!-- Props Reference -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Props Reference
      </h2>

      <div class="overflow-x-auto">
        <table
          class="w-full border-collapse border border-gray-300 dark:border-gray-600"
        >
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-800">
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-left text-sm font-semibold text-gray-900 dark:text-gray-50"
              >
                Prop
              </th>
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-left text-sm font-semibold text-gray-900 dark:text-gray-50"
              >
                Type
              </th>
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-left text-sm font-semibold text-gray-900 dark:text-gray-50"
              >
                Default
              </th>
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-left text-sm font-semibold text-gray-900 dark:text-gray-50"
              >
                Description
              </th>
            </tr>
          </thead>
          <tbody class="text-sm">
            <tr>
              <td
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 font-mono text-blue-700 dark:text-blue-300"
              >
                items
              </td>
              <td
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-gray-700 dark:text-gray-300"
              >
                NavItem[]
              </td>
              <td
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-gray-700 dark:text-gray-300"
              >
                []
              </td>
              <td
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-gray-700 dark:text-gray-300"
              >
                Array of navigation items
              </td>
            </tr>
            <tr>
              <td
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 font-mono text-blue-700 dark:text-blue-300"
              >
