---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Pagination from '../../components/Pagination.astro';
import CodeBlock from '../../components/CodeBlock.astro';

const title = 'Pagination Component';
const description =
  'WCAG AAA compliant pagination component with multiple variants, responsive design, and comprehensive accessibility features.';
---

<DocsLayout seoTitle={title} seoDescription={description}>
  <div class="space-y-12">
    <!-- Introduction -->
    <section>
      <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
        The Pagination component provides accessible navigation between pages
        with multiple variants, customizable display options, and comprehensive
        keyboard and screen reader support. It automatically handles ellipsis
        for large page sets and maintains WCAG AAA compliance.
      </p>
    </section>

    <!-- Basic Usage -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Basic Usage
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <div class="bg-gray-50 dark:bg-gray-800 p-8 rounded-lg">
            <Pagination currentPage={1} totalPages={10} />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<Pagination currentPage={1} totalPages={10} />`}
        lang="astro"
      />
    </section>

    <!-- Variants -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Style Variants
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Default
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={5} totalPages={10} variant="default" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Minimal
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={5} totalPages={10} variant="minimal" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Outline
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={5} totalPages={10} variant="outline" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Rounded
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={5} totalPages={10} variant="rounded" />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Default variant -->
<Pagination currentPage={5} totalPages={10} variant="default" />

<!-- Minimal variant -->
<Pagination currentPage={5} totalPages={10} variant="minimal" />

<!-- Outline variant -->
<Pagination currentPage={5} totalPages={10} variant="outline" />

<!-- Rounded variant -->
<Pagination currentPage={5} totalPages={10} variant="rounded" />`}
        lang="astro"
      />
    </section>

    <!-- Sizes -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Sizes
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Small
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={3} totalPages={8} size="sm" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Medium (Default)
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={3} totalPages={8} size="md" />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Large
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={3} totalPages={8} size="lg" />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Small size -->
<Pagination currentPage={3} totalPages={8} size="sm" />

<!-- Medium size (default) -->
<Pagination currentPage={3} totalPages={8} size="md" />

<!-- Large size -->
<Pagination currentPage={3} totalPages={8} size="lg" />`}
        lang="astro"
      />
    </section>

    <!-- Display Options -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Display Options
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            With First/Last Buttons
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination
              currentPage={15}
              totalPages={25}
              showFirstLast={true}
              maxVisible={5}
            />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Without Previous/Next
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={5} totalPages={10} showPrevNext={false} />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Only Navigation (No Page Numbers)
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination
              currentPage={5}
              totalPages={10}
              showPageNumbers={false}
              showFirstLast={true}
            />
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Limited Visible Pages
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={12} totalPages={20} maxVisible={3} />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<!-- With first/last buttons -->
<Pagination 
  currentPage={15} 
  totalPages={25} 
  showFirstLast={true}
  maxVisible={5}
/>

<!-- Without previous/next -->
<Pagination 
  currentPage={5} 
  totalPages={10} 
  showPrevNext={false}
/>

<!-- Only navigation buttons -->
<Pagination 
  currentPage={5} 
  totalPages={10} 
  showPageNumbers={false}
  showFirstLast={true}
/>

<!-- Limited visible pages -->
<Pagination 
  currentPage={12} 
  totalPages={20} 
  maxVisible={3}
/>`}
        lang="astro"
      />
    </section>

    <!-- URL Integration -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        URL Integration
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Query Parameter Pagination
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={3} totalPages={8} baseUrl="" />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Generates URLs like: ?page=1, ?page=2, etc.
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Custom Base URL
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={3} totalPages={8} baseUrl="/blog" />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Generates URLs like: /blog?page=1, /blog?page=2, etc.
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Existing Query Parameters
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination
              currentPage={3}
              totalPages={8}
              baseUrl="/search?q=astro"
            />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Generates URLs like: /search?q=astro&page=1, /search?q=astro&page=2,
            etc.
          </p>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Query parameter only -->
<Pagination 
  currentPage={3} 
  totalPages={8}
  baseUrl=""
/>

<!-- Custom base URL -->
<Pagination 
  currentPage={3} 
  totalPages={8}
  baseUrl="/blog"
/>

<!-- With existing parameters -->
<Pagination 
  currentPage={3} 
  totalPages={8}
  baseUrl="/search?q=astro"
/>`}
        lang="astro"
      />
    </section>

    <!-- Edge Cases -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Edge Cases
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Single Page
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={1} totalPages={1} />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Navigation buttons are disabled when there's only one page.
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            First Page
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={1} totalPages={10} showFirstLast={true} />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Previous and First buttons are disabled on the first page.
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Last Page
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={10} totalPages={10} showFirstLast={true} />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Next and Last buttons are disabled on the last page.
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Many Pages with Ellipsis
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination currentPage={25} totalPages={50} maxVisible={5} />
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
            Ellipsis (‚Ä¶) automatically appears when there are too many pages to
            display.
          </p>
        </div>
      </div>

      <CodeBlock
        code={`<!-- Single page -->
<Pagination currentPage={1} totalPages={1} />

<!-- First page -->
<Pagination currentPage={1} totalPages={10} showFirstLast={true} />

<!-- Last page -->
<Pagination currentPage={10} totalPages={10} showFirstLast={true} />

<!-- Many pages -->
<Pagination currentPage={25} totalPages={50} maxVisible={5} />`}
        lang="astro"
      />
    </section>

    <!-- Custom Labels -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Custom Labels
      </h2>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            Internationalization
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination
              currentPage={3}
              totalPages={8}
              showFirstLast={true}
              previousLabel="Vorherige"
              nextLabel="N√§chste"
              firstLabel="Erste"
              lastLabel="Letzte"
              pageLabel="Seite"
              ariaLabel="Seitennavigation"
            />
          </div>
        </div>
      </div>

      <CodeBlock
        code={`<Pagination 
  currentPage={3} 
  totalPages={8}
  showFirstLast={true}
  previousLabel="Vorherige"
  nextLabel="N√§chste"
  firstLabel="Erste"
  lastLabel="Letzte"
  pageLabel="Seite"
  ariaLabel="Seitennavigation"
/>`}
        lang="astro"
      />
    </section>

    <!-- Accessibility -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Accessibility Features
      </h2>

      <div
        class="bg-blue-50 dark:bg-blue-950 border border-blue-200 dark:border-blue-800 rounded-lg p-6 mb-8"
      >
        <h3 class="text-lg font-medium text-blue-900 dark:text-blue-100 mb-4">
          WCAG AAA Compliance
        </h3>
        <ul class="list-disc pl-6 space-y-2 text-blue-800 dark:text-blue-200">
          <li>Semantic HTML with proper nav element and role="navigation"</li>
          <li>
            WCAG AAA contrast ratios (7:1+) for all text and interactive
            elements
          </li>
          <li>
            Comprehensive ARIA labeling with aria-label, aria-current, and
            aria-disabled
          </li>
          <li>
            Screen reader announcements for page context and disabled states
          </li>
          <li>Keyboard navigation support with proper focus management</li>
          <li>Responsive design that works across all device sizes</li>
          <li>High contrast mode support for users with visual impairments</li>
          <li>Proper button sizing (min 44px) for touch accessibility</li>
        </ul>
      </div>

      <div class="space-y-8 mb-8">
        <div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-4">
            ARIA Features
          </h3>
          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
            <Pagination
              currentPage={5}
              totalPages={10}
              ariaLabel="Product list pagination"
            />
          </div>
          <ul class="text-sm text-gray-600 dark:text-gray-400 mt-4 space-y-1">
            <li>
              ‚Ä¢ <strong>aria-current="page"</strong> indicates the current page
            </li>
            <li>
              ‚Ä¢ <strong>aria-disabled="true"</strong> for disabled navigation buttons
            </li>
            <li>
              ‚Ä¢ <strong>aria-label</strong> provides context for each navigation
              element
            </li>
            <li>
              ‚Ä¢ <strong>role="navigation"</strong> identifies the pagination as navigation
            </li>
            <li>
              ‚Ä¢ <strong>sr-only</strong> text provides additional context for screen
              readers
            </li>
          </ul>
        </div>
      </div>

      <CodeBlock
        code={`<Pagination 
  currentPage={5} 
  totalPages={10}
  ariaLabel="Product list pagination"
  pageLabel="Page"
  previousLabel="Previous page"
  nextLabel="Next page"
/>`}
        lang="astro"
      />
    </section>

    <!-- Props Reference -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-50 mb-6">
        Props Reference
      </h2>

      <div class="overflow-x-auto">
        <table
          class="w-full border-collapse border border-gray-300 dark:border-gray-600"
        >
          <thead>
            <tr class="bg-gray-50 dark:bg-gray-800">
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-left text-sm font-semibold text-gray-900 dark:text-gray-50"
              >
                Prop
              </th>
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-left text-sm font-semibold text-gray-900 dark:text-gray-50"
              >
                Type
              </th>
              <th
                class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-left text-sm font-semibold text-gray-900 dark:text-gray-50"
              >
                Default
              </th>
