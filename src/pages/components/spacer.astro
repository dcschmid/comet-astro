---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Spacer from '../../components/Spacer.astro';
---

<DocsLayout
  title="Spacer"
  description="Insert responsive spacing between elements without extra wrappers."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Example</h2>
    <div class="bg-gray-900 p-4 rounded-lg">
      <div class="bg-purple-500/20 p-4 rounded">Content Above</div>
      <Spacer size="lg" />
      <div class="bg-purple-500/20 p-4 rounded">Content Below (lg spacer)</div>
      <Spacer size="xl" />
      <div class="bg-purple-500/20 p-4 rounded">Content Below (xl spacer)</div>
    </div>
  </section>
</DocsLayout>
