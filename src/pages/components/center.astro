---
import DocsLayout from '../../layouts/DocsLayout.astro';
import Center from '../../components/Center.astro';
---

<DocsLayout
  title="Center"
  description="Utility to center content along horizontal, vertical, or both axes."
>
  <section class="space-y-4">
    <h2 class="text-xl font-bold">Examples</h2>
    <div class="space-y-4">
      <div class="bg-gray-900 p-4 rounded-lg h-32">
        <Center>
          <div class="bg-purple-500/20 p-4 rounded">Centered Both</div>
        </Center>
      </div>
      <div class="bg-gray-900 p-4 rounded-lg h-32">
        <Center axis="horizontal">
          <div class="bg-blue-500/20 p-4 rounded">Centered Horizontal</div>
        </Center>
      </div>
    </div>
  </section>
</DocsLayout>
