---
import { cn } from '../utils/cn';

export interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className } = Astro.props as Props;
---

<div class={cn('py-8 text-slate-900 dark:text-slate-100', className)}>
  <h1
    class="text-3xl font-bold tracking-tight text-slate-900 dark:text-slate-100"
  >
    {title}
  </h1>
  {
    subtitle && (
      <p class="mt-3 max-w-2xl text-base text-slate-700 dark:text-slate-200">
        {subtitle}
      </p>
    )
  }
  <slot />
</div>
