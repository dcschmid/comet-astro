---
interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'search';
  name: string;
  label?: string;
  placeholder?: string;
  value?: string | number;
  required?: boolean;
  disabled?: boolean;
  error?: string;
  helperText?: string;
  size?: 'sm' | 'md' | 'lg';
  className?: string;
  id?: string;
}

const {
  type = 'text',
  name,
  label,
  placeholder,
  value,
  required = false,
  disabled = false,
  error,
  helperText,
  size = 'md',
  className = '',
  id = name,
} = Astro.props;

const sizeClasses = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2 text-base',
  lg: 'px-5 py-3 text-lg',
};

const baseClasses =
  'w-full rounded-lg border transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-offset-white dark:focus-visible:ring-offset-slate-900';
const stateClasses = error
  ? 'border-rose-500 bg-rose-50 focus-visible:ring-rose-400 dark:border-rose-400 dark:bg-rose-500/10'
  : 'border-slate-300 bg-white text-slate-900 focus-visible:ring-blue-500 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100';
const disabledClasses = disabled ? 'cursor-not-allowed opacity-60' : '';
const descriptionId = error || helperText ? `${id}-description` : undefined;
---

<div class={`space-y-1.5 ${className}`}>
  {
    label && (
      <label
        for={id}
        class="block text-sm font-medium text-slate-700 dark:text-slate-200"
      >
        {label}
        {required && <span class="ml-1 text-rose-500">*</span>}
      </label>
    )
  }
  <input
    type={type}
    id={id}
    name={name}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    aria-invalid={error ? 'true' : undefined}
    aria-describedby={descriptionId}
    class={`${baseClasses} ${sizeClasses[size]} ${stateClasses} ${disabledClasses}`}
  />
  {
    (error || helperText) && (
      <p
        id={descriptionId}
        class={`text-xs ${error ? 'text-rose-500 dark:text-rose-300' : 'text-slate-500 dark:text-slate-400'}`}
      >
        {error || helperText}
      </p>
    )
  }
</div>
