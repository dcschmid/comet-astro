---
/**
 * AutobahnCharging - E-Ladestationen auf deutschen Autobahnen
 *
 * Zeigt Ladestationen mit Typ (AC/DC), Leistung und Standort.
 *
 * API: https://autobahn.api.bund.dev/
 */
import { cn } from '../utils/cn';

interface ChargingStation {
  identifier: string;
  title: string;
  subtitle: string;
  description: string[];
  coordinate: { lat: string; long: string };
  display_type: string;
  icon: string;
}

interface Props {
  road: string;
  maxItems?: number;
  compact?: boolean;
  showTitle?: boolean;
  showMapLinks?: boolean;
  className?: string;
}

const {
  road,
  maxItems = 10,
  compact = false,
  showTitle = true,
  showMapLinks = true,
  className = '',
} = Astro.props;

let stations: ChargingStation[] = [];
let error: string | null = null;

try {
  const res = await fetch(
    `https://verkehr.autobahn.de/o/autobahn/${road}/services/electric_charging_station`
  );
  if (res.ok) {
    const data = await res.json();
    stations = (data.electric_charging_station || []).slice(0, maxItems);
  } else {
    error = `Fehler (${res.status})`;
  }
} catch {
  error = 'Verbindungsfehler';
}

function parseChargingPoints(desc: string[]) {
  const points: { type: string; power: string; connector: string }[] = [];
  let currentPoint = { type: '', power: '', connector: '' };

  for (let i = 0; i < desc.length; i++) {
    const line = desc[i];
    if (line.includes('Ladepunkt')) {
      if (currentPoint.power) points.push({ ...currentPoint });
      currentPoint = { type: '', power: '', connector: '' };
    } else if (line.includes('AC') || line.includes('DC')) {
      currentPoint.type = line.includes('DC') ? 'DC' : 'AC';
      currentPoint.connector = line;
    } else if (line.includes('kW')) {
      currentPoint.power = line;
    }
  }
  if (currentPoint.power) points.push(currentPoint);

  return points;
}

function getMaxPower(points: { power: string }[]) {
  let max = 0;
  for (const p of points) {
    const match = p.power.match(/(\d+)/);
    if (match) max = Math.max(max, parseInt(match[1]));
  }
  return max;
}
---

<div
  class={cn(
    'rounded-2xl bg-gradient-to-br from-slate-800/90 to-slate-900/90 border border-slate-700/50 overflow-hidden',
    className
  )}
>
  {
    showTitle && (
      <header class="px-5 py-4 border-b border-slate-700/50 bg-emerald-500/5">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="p-2.5 rounded-xl bg-gradient-to-br from-emerald-500 to-teal-600 shadow-lg shadow-emerald-500/25">
              <svg
                class="w-5 h-5 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-slate-100 text-lg">
                E-Ladestationen {road}
              </h3>
              <p class="text-xs text-slate-400">
                {stations.length} Station{stations.length !== 1 ? 'en' : ''}
              </p>
            </div>
          </div>
          {stations.length > 0 && (
            <span class="px-3 py-1.5 rounded-full text-xs font-semibold bg-emerald-500/20 text-emerald-300 border border-emerald-500/30">
              ‚ö°{' '}
              {
                stations.filter((s) => s.display_type?.includes('STRONG'))
                  .length
              }{' '}
              Schnelllader
            </span>
          )}
        </div>
      </header>
    )
  }

  <div class={cn('p-4', compact && 'p-3')}>
    {
      error ? (
        <div class="p-4 rounded-xl bg-red-950/50 border border-red-500/30 text-red-300 text-sm flex items-center gap-2">
          <svg
            class="w-5 h-5 shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          {error}
        </div>
      ) : stations.length === 0 ? (
        <div class="py-8 text-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-slate-700/50 flex items-center justify-center">
            <svg
              class="w-7 h-7 text-slate-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"
              />
            </svg>
          </div>
          <p class="text-slate-400 font-medium">Keine Ladestationen</p>
          <p class="text-slate-500 text-sm mt-1">
            Auf der {road} nicht verf√ºgbar
          </p>
        </div>
      ) : (
        <div class={cn('space-y-3', compact && 'space-y-2')}>
          {stations.map((station) => {
            const points = parseChargingPoints(station.description);
            const maxPower = getMaxPower(points);
            const isStrong =
              station.display_type?.includes('STRONG') || maxPower >= 50;
            const hasDC = points.some((p) => p.type === 'DC');
            const hasAC = points.some((p) => p.type === 'AC');
            const address = station.description[1] || '';

            return (
              <article
                class={cn(
                  'group rounded-xl border p-4 transition-all',
                  isStrong
                    ? 'bg-emerald-950/30 border-emerald-500/30 hover:border-emerald-500/50'
                    : 'bg-slate-800/50 border-slate-700/50 hover:border-slate-600'
                )}
              >
                <div class="flex items-start gap-3">
                  <div
                    class={cn(
                      'shrink-0 p-2 rounded-lg',
                      isStrong ? 'bg-emerald-500/20' : 'bg-blue-500/20'
                    )}
                  >
                    <svg
                      class={cn(
                        'w-5 h-5',
                        isStrong ? 'text-emerald-400' : 'text-blue-400'
                      )}
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 10V3L4 14h7v7l9-11h-7z"
                      />
                    </svg>
                  </div>

                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between gap-2">
                      <div>
                        <h4 class="font-semibold text-slate-100">
                          {station.title}
                        </h4>
                        {address && (
                          <p class="text-sm text-slate-400 mt-0.5">
                            üìç {address}
                          </p>
                        )}
                      </div>

                      <div class="flex items-center gap-2 shrink-0">
                        {isStrong && (
                          <span class="px-2 py-0.5 text-xs bg-emerald-500/30 text-emerald-200 rounded-full font-semibold">
                            ‚ö° Schnell
                          </span>
                        )}

                        {showMapLinks && station.coordinate && (
                          <a
                            href={`https://www.google.com/maps?q=${station.coordinate.lat},${station.coordinate.long}`}
                            target="_blank"
                            rel="noopener"
                            class="p-1.5 rounded-lg bg-slate-700/50 hover:bg-blue-500/20 text-slate-400 hover:text-blue-400 transition-colors"
                            title="Navigation starten"
                          >
                            <svg
                              class="w-4 h-4"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                              />
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                              />
                            </svg>
                          </a>
                        )}
                      </div>
                    </div>

                    {!compact && (
                      <div class="mt-3 flex flex-wrap gap-2">
                        {/* Max Power Badge */}
                        {maxPower > 0 && (
                          <span
                            class={cn(
                              'inline-flex items-center gap-1.5 px-2.5 py-1 text-xs rounded-lg font-semibold',
                              maxPower >= 150
                                ? 'bg-emerald-500/30 text-emerald-200 border border-emerald-500/30'
                                : maxPower >= 50
                                  ? 'bg-teal-500/30 text-teal-200 border border-teal-500/30'
                                  : 'bg-blue-500/30 text-blue-200 border border-blue-500/30'
                            )}
                          >
                            ‚ö° max. {maxPower} kW
                          </span>
                        )}

                        {/* Connector Types */}
                        {hasDC && (
                          <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-emerald-500/20 text-emerald-300 text-xs rounded-lg">
                            <span class="w-1.5 h-1.5 rounded-full bg-emerald-400" />
                            DC Schnellladen
                          </span>
                        )}
                        {hasAC && (
                          <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-blue-500/20 text-blue-300 text-xs rounded-lg">
                            <span class="w-1.5 h-1.5 rounded-full bg-blue-400" />
                            AC Laden
                          </span>
                        )}
                      </div>
                    )}

                    {!compact && points.length > 0 && (
                      <div class="mt-3 grid grid-cols-2 gap-2">
                        {points.map((point, idx) => (
                          <div
                            class={cn(
                              'px-3 py-2 rounded-lg text-xs',
                              point.type === 'DC'
                                ? 'bg-emerald-500/10 border border-emerald-500/20'
                                : 'bg-blue-500/10 border border-blue-500/20'
                            )}
                          >
                            <div
                              class={cn(
                                'font-semibold',
                                point.type === 'DC'
                                  ? 'text-emerald-300'
                                  : 'text-blue-300'
                              )}
                            >
                              Ladepunkt {idx + 1}
                            </div>
                            <div class="text-slate-400 mt-0.5">
                              {point.connector}
                            </div>
                            <div
                              class={cn(
                                'font-bold mt-1',
                                point.type === 'DC'
                                  ? 'text-emerald-200'
                                  : 'text-blue-200'
                              )}
                            >
                              {point.power}
                            </div>
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      )
    }
  </div>

  <footer
    class="px-5 py-3 border-t border-slate-700/50 bg-slate-800/30 flex items-center justify-between text-xs text-slate-500"
  >
    <span>Daten: Autobahn GmbH</span>
    <a
      href="https://autobahn.de"
      target="_blank"
      rel="noopener"
      class="text-blue-400 hover:text-blue-300"
    >
      autobahn.de ‚Üí
    </a>
  </footer>
</div>
