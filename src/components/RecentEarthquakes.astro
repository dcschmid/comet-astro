---
/**
 * RecentEarthquakes - Aktuelle Erdbeben weltweit
 *
 * Zeigt die neuesten Erdbeben von USGS mit Magnitude, Ort und Zeit.
 *
 * API: https://earthquake.usgs.gov/earthquakes/feed/v1.0/geojson.php
 */
import { cn } from '../utils/cn';

interface Earthquake {
  id: string;
  properties: {
    mag: number;
    place: string;
    time: number;
    url: string;
    title: string;
    alert: string | null;
    tsunami: number;
  };
  geometry: {
    coordinates: [number, number, number];
  };
}

interface Props {
  minMagnitude?: '2.5' | '4.5' | 'significant' | 'all';
  timeframe?: 'hour' | 'day' | 'week' | 'month';
  maxItems?: number;
  showMap?: boolean;
  showTsunami?: boolean;
  compact?: boolean;
  className?: string;
}

const {
  minMagnitude = '2.5',
  timeframe = 'day',
  maxItems = 10,
  showMap = true,
  showTsunami = true,
  compact = false,
  className = '',
} = Astro.props;

let earthquakes: Earthquake[] = [];
let error: string | null = null;
let metadata: { title: string; count: number } | null = null;

const feedUrl = `https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/${minMagnitude}_${timeframe}.geojson`;

try {
  const res = await fetch(feedUrl);
  if (res.ok) {
    const data = await res.json();
    metadata = { title: data.metadata.title, count: data.metadata.count };
    earthquakes = data.features.slice(0, maxItems);
  } else {
    error = `Fehler (${res.status})`;
  }
} catch {
  error = 'Verbindungsfehler';
}

function getMagnitudeColor(mag: number): string {
  if (mag >= 7) return 'bg-red-500 text-white';
  if (mag >= 6) return 'bg-orange-500 text-white';
  if (mag >= 5) return 'bg-amber-500 text-white';
  if (mag >= 4) return 'bg-yellow-500 text-slate-900';
  return 'bg-emerald-500 text-white';
}

function getMagnitudeRing(mag: number): string {
  if (mag >= 7) return 'ring-red-500/50';
  if (mag >= 6) return 'ring-orange-500/50';
  if (mag >= 5) return 'ring-amber-500/50';
  if (mag >= 4) return 'ring-yellow-500/50';
  return 'ring-emerald-500/50';
}

function formatTime(timestamp: number): string {
  const date = new Date(timestamp);
  const now = new Date();
  const diffMs = now.getTime() - date.getTime();
  const diffMins = Math.floor(diffMs / 60000);
  const diffHours = Math.floor(diffMs / 3600000);

  if (diffMins < 60) return `vor ${diffMins} Min`;
  if (diffHours < 24) return `vor ${diffHours} Std`;
  return date.toLocaleDateString('de-DE', {
    day: 'numeric',
    month: 'short',
    hour: '2-digit',
    minute: '2-digit',
  });
}

function getDepthLabel(depth: number): string {
  if (depth < 70) return 'flach';
  if (depth < 300) return 'mittel';
  return 'tief';
}
