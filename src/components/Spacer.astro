---
interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | 'auto';
  axis?: 'horizontal' | 'vertical' | 'both';
  className?: string;
}

const { size = 'md', axis = 'vertical', className = '' } = Astro.props;

const sizeClasses = {
  xs: '0.25rem',
  sm: '0.5rem',
  md: '1rem',
  lg: '1.5rem',
  xl: '2rem',
  '2xl': '3rem',
  '3xl': '4rem',
  auto: 'auto',
};

const spacerSize = sizeClasses[size];

const styles: Record<string, string> = {};

if (axis === 'vertical' || axis === 'both') {
  styles.height = spacerSize;
}
if (axis === 'horizontal' || axis === 'both') {
  styles.width = spacerSize;
}
if (axis === 'vertical') {
  styles.width = '100%';
}
if (axis === 'horizontal') {
  styles.height = '100%';
}

const styleString = Object.entries(styles)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');
---

<div
  class={`flex-shrink-0 ${className}`}
  style={styleString}
  aria-hidden="true"
>
</div>
