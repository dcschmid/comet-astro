      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      aria-hidden="true"
    >
      {title && <title>{title}</title>}
      {pathTransform ? (
        <g transform={pathTransform}>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d={path}
          />
        </g>
      ) : (
        <path
