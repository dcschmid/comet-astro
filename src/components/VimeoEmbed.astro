---
interface Props {
  videoId: string;
  title?: string;
  aspectRatio?: '16/9' | '4/3' | '1/1';
  autoplay?: boolean;
  loop?: boolean;
  muted?: boolean;
  className?: string;
}

const {
  videoId,
  title = 'Vimeo video player',
  aspectRatio = '16/9',
  autoplay = false,
  loop = false,
  muted = false,
  className = '',
} = Astro.props;

const ratioClasses = {
  '16/9': 'aspect-video',
  '4/3': 'aspect-[4/3]',
  '1/1': 'aspect-square',
};

const params = new URLSearchParams({
  ...(autoplay && { autoplay: '1' }),
  ...(loop && { loop: '1' }),
  ...(muted && { muted: '1' }),
});

const src = `https://player.vimeo.com/video/${videoId}?${params.toString()}`;
---

<div
  class={`relative overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-800 dark:bg-slate-950 ${ratioClasses[aspectRatio]} ${className}`.trim()}
>
  <iframe
    src={src}
    title={title}
    allow="autoplay; fullscreen; picture-in-picture"
    allowfullscreen
    class="absolute inset-0 h-full w-full border-0"></iframe>
</div>
