---
/**
 * Breadcrumbs - navigation trail
 */
interface Crumb {
  href?: string;
  label: string;
  current?: boolean;
}

interface Props {
  items: Crumb[];
  ariaLabel?: string;
  className?: string;
}

const {
  items = [],
  ariaLabel = 'Breadcrumb',
  className = '',
} = Astro.props as Props;
---

<nav
  aria-label={ariaLabel}
  class={`text-sm font-medium text-slate-600 dark:text-slate-300 ${className}`}
>
  <ol class="flex flex-wrap items-center gap-2">
    {
      items.map((c, i) => (
        <li class="flex items-center gap-2">
          {i > 0 && (
            <span aria-hidden="true" class="text-slate-400 dark:text-slate-500">
              /
            </span>
          )}
          {c.current || !c.href ? (
            <span
              aria-current={c.current ? 'page' : undefined}
              class="text-slate-900 dark:text-white"
            >
              {c.label}
            </span>
          ) : (
            <a
              href={c.href}
              class="rounded-md px-1 py-0.5 text-slate-600 transition hover:text-blue-600 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 dark:text-slate-300 dark:hover:text-blue-300"
            >
              {c.label}
            </a>
          )}
        </li>
      ))
    }
  </ol>
</nav>
