---
/**
 * Callout - Informational callout box
 *
 * @deprecated This component is now a wrapper around Alert.
 * Consider using Alert directly with variant="note" for new code.
 *
 * @example
 * // Old usage (still works):
 * <Callout variant="info" title="Note">Content</Callout>
 *
 * // New recommended usage:
 * <Alert variant="note" title="Note" icon="üìù">Content</Alert>
 */
import Alert from './Alert.astro';

interface Props {
  variant?: 'info' | 'success' | 'warning' | 'error' | 'note';
  title?: string;
  icon?: string;
  className?: string;
}

const { variant = 'note', title, icon, className = '' } = Astro.props;

// Map Callout variants to Alert variants
const variantMap: Record<string, string> = {
  info: 'info',
  success: 'success',
  warning: 'warning',
  error: 'error',
  note: 'note',
};

// Default emoji icons for Callout compatibility
const defaultIcons: Record<string, string> = {
  info: '‚ÑπÔ∏è',
  success: '‚úÖ',
  warning: '‚ö†Ô∏è',
  error: '‚ùå',
  note: 'üìù',
};

const alertVariant = variantMap[variant] || 'note';
const displayIcon = icon ?? defaultIcons[variant];
---

<Alert
  variant={alertVariant as any}
  title={title}
  icon={displayIcon}
  className={className}
>
  <slot />
</Alert>
