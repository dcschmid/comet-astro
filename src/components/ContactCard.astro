---
/**
 * ContactCard - person card with contact info
 */
interface Props {
  name: string;
  role?: string;
  email?: string;
  avatar?: string;
  website?: string;
  className?: string;
}

const {
  name,
  role,
  email,
  avatar,
  website,
  className = '',
} = Astro.props as Props;

const initials = name
  .split(' ')
  .filter(Boolean)
  .map((part) => part[0] || '')
  .join('')
  .slice(0, 2)
  .toUpperCase();
---

<article
  class={`flex items-center gap-4 rounded-2xl border border-slate-200 bg-white p-5 text-slate-800 shadow-sm transition dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 ${className}`.trim()}
>
  {
    avatar ? (
      <img
        src={avatar}
        alt={`Portrait of ${name}`}
        class="h-16 w-16 rounded-full object-cover shadow-sm"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div
        class="flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-indigo-600 via-purple-600 to-rose-500 text-white shadow-sm"
        aria-hidden="true"
      >
        <span class="text-lg font-semibold">{initials}</span>
      </div>
    )
  }
  <div class="min-w-0 flex-1">
    <div
      class="truncate text-lg font-semibold text-slate-900 dark:text-slate-100"
    >
      {name}
    </div>
    {
      role && (
        <div class="truncate text-sm text-slate-600 dark:text-slate-300">
          {role}
        </div>
      )
    }
    <div
      class="mt-3 flex flex-wrap items-center gap-3 text-sm text-slate-600 dark:text-slate-300"
    >
      {
        email && (
          <a
            href={`mailto:${email}`}
            class="rounded-md border border-transparent px-1 py-0.5 text-blue-600 no-underline transition hover:bg-blue-50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-white dark:text-blue-300 dark:hover:bg-blue-500/20 dark:focus-visible:ring-offset-slate-900"
          >
            {email}
          </a>
        )
      }
      {
        website && (
          <a
            href={website}
            target="_blank"
            rel="noopener noreferrer"
            class="rounded-md border border-transparent px-1 py-0.5 text-blue-600 no-underline transition hover:bg-blue-50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-white dark:text-blue-300 dark:hover:bg-blue-500/20 dark:focus-visible:ring-offset-slate-900"
          >
            Website<span class="sr-only"> (opens in new window)</span>
          </a>
        )
      }
    </div>
  </div>
</article>
