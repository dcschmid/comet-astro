---
/**
 * HeroSection - headline, subheadline and optional actions
 */
import ButtonLink from './ButtonLink.astro';

interface Action {
  href: string;
  label: string;
  target?: '_blank' | '_self' | '_parent' | '_top';
}

interface Props {
  title: string;
  subtitle?: string;
  primary?: Action;
  secondary?: Action;
  className?: string;
}

const {
  title,
  subtitle,
  primary,
  secondary,
  className = '',
} = Astro.props as Props;
---

<section
  class={`relative overflow-hidden rounded-3xl border border-slate-200 bg-gradient-to-br from-blue-50 via-white to-purple-50 p-8 text-slate-800 shadow-xl dark:border-slate-700 dark:bg-gradient-to-br dark:from-slate-900 dark:via-slate-950 dark:to-slate-900 dark:text-slate-100 ${className}`.trim()}
>
  <div class="mx-auto max-w-3xl text-center">
    <h1
      class="mb-3 text-4xl font-extrabold text-slate-900 tracking-tight md:text-5xl dark:text-white"
    >
      {title}
    </h1>
    {
      subtitle && (
        <p class="mx-auto mb-6 max-w-prose text-lg text-slate-600 dark:text-slate-300">
          {subtitle}
        </p>
      )
    }
    {
      (primary || secondary) && (
        <div class="flex flex-wrap items-center justify-center gap-3">
          {primary && (
            <ButtonLink
              href={primary.href}
              label={primary.label}
              target={primary.target || '_self'}
            />
          )}
          {secondary && (
            <ButtonLink
              href={secondary.href}
              label={secondary.label}
              variant="secondary"
              target={secondary.target || '_self'}
            />
          )}
        </div>
      )
    }
  </div>
</section>
