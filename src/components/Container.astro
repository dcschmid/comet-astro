---
interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  className?: string;
}

const { size = 'lg', className = '' } = Astro.props;

const sizeClasses = {
  sm: 'max-w-2xl',
  md: 'max-w-4xl',
  lg: 'max-w-6xl',
  xl: 'max-w-7xl',
  full: 'max-w-full',
};
---

<div class={`mx-auto px-4 sm:px-6 lg:px-8 ${sizeClasses[size]} ${className}`}>
  <slot />
</div>
