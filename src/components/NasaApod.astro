---
/**
 * NasaApod - NASA Astronomy Picture of the Day
 *
 * Zeigt das tägliche Astronomie-Bild der NASA mit Erklärung.
 *
 * API: https://api.nasa.gov/planetary/apod
 */
import { cn } from '../utils/cn';

interface ApodData {
  title: string;
  date: string;
  explanation: string;
  url: string;
  hdurl?: string;
  media_type: 'image' | 'video';
  copyright?: string;
}

interface Props {
  apiKey?: string;
  date?: string; // YYYY-MM-DD format
  showExplanation?: boolean;
  showDate?: boolean;
  showCopyright?: boolean;
  variant?: 'default' | 'compact' | 'hero';
  maxExplanationLength?: number;
  className?: string;
}

const {
  apiKey = 'DEMO_KEY',
  date,
  showExplanation = true,
  showDate = true,
  showCopyright = true,
  variant = 'default',
  maxExplanationLength = 300,
  className = '',
} = Astro.props;

let data: ApodData | null = null;
let error: string | null = null;

try {
  const params = new URLSearchParams({ api_key: apiKey });
  if (date) params.append('date', date);

  const res = await fetch(`https://api.nasa.gov/planetary/apod?${params}`);
  if (res.ok) {
    data = await res.json();
  } else if (res.status === 429) {
    error = 'API-Limit erreicht';
  } else {
    error = `Fehler (${res.status})`;
  }
} catch {
  error = 'Verbindungsfehler';
}

function truncate(text: string, length: number): string {
  if (text.length <= length) return text;
  return text.slice(0, length).trim() + '…';
}

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('de-DE', {
    weekday: 'long',
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  });
}

const isHero = variant === 'hero';
const isCompact = variant === 'compact';
---

{
  error ? (
    <div
      class={cn(
        'rounded-xl bg-slate-800/50 border border-slate-700/50 p-5',
        className
      )}
    >
      <div class="flex items-center gap-3 text-red-400">
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
        <span>{error}</span>
      </div>
    </div>
  ) : (
    data && (
      <div
        class={cn(
          'group rounded-2xl overflow-hidden border transition-all',
          isHero
            ? 'bg-black border-slate-700/50'
            : 'bg-gradient-to-br from-slate-800/90 to-slate-900/90 border-slate-700/50',
          className
        )}
      >
        {/* Image/Video */}
        {data.media_type === 'video' ? (
          <div
            class={cn(
              'relative',
              isHero
                ? 'aspect-video'
                : isCompact
                  ? 'aspect-[21/9]'
                  : 'aspect-video'
            )}
          >
            <iframe
              src={data.url}
              title={data.title}
              class="w-full h-full"
              allowfullscreen
            />
          </div>
        ) : (
          <div
            class={cn(
              'relative overflow-hidden',
              isHero
                ? 'aspect-[21/9]'
                : isCompact
                  ? 'aspect-[3/1]'
                  : 'aspect-video'
            )}
          >
            <img
              src={data.url}
              alt={data.title}
              class={cn(
                'w-full h-full object-cover transition-transform duration-700',
                !isHero && 'group-hover:scale-105'
              )}
              loading="lazy"
            />

            {/* Gradient overlay */}
            <div
              class={cn(
                'absolute inset-0',
                isHero
                  ? 'bg-gradient-to-t from-black via-black/50 to-transparent'
                  : 'bg-gradient-to-t from-slate-900/90 via-transparent to-transparent'
              )}
            />

            {/* HD Link */}
            {data.hdurl && !isCompact && (
              <a
                href={data.hdurl}
                target="_blank"
                rel="noopener"
                class="absolute top-4 right-4 p-2 rounded-lg bg-black/50 backdrop-blur-sm text-white/80 hover:text-white hover:bg-black/70 transition-all opacity-0 group-hover:opacity-100"
                title="HD-Version öffnen"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"
                  />
                </svg>
              </a>
            )}

            {/* NASA Badge */}
            {isHero && (
              <div class="absolute top-4 left-4 flex items-center gap-2 px-3 py-1.5 rounded-full bg-black/50 backdrop-blur-sm">
                <div class="w-6 h-6 rounded-full bg-blue-500 flex items-center justify-center">
                  <span class="text-xs font-bold text-white">N</span>
                </div>
                <span class="text-sm font-semibold text-white">NASA APOD</span>
              </div>
            )}

            {/* Title overlay for hero */}
            {isHero && (
              <div class="absolute bottom-0 left-0 right-0 p-8">
                {showDate && (
                  <p class="text-blue-400 text-sm font-medium mb-2">
                    {formatDate(data.date)}
                  </p>
                )}
                <h2 class="text-3xl md:text-4xl font-black text-white mb-4">
                  {data.title}
                </h2>
                {showCopyright && data.copyright && (
                  <p class="text-white/60 text-sm">© {data.copyright}</p>
                )}
              </div>
            )}
          </div>
        )}

        {/* Content */}
        {!isHero && (
          <div class={cn('p-5', isCompact && 'p-4')}>
            {/* Header */}
            <div class="flex items-start justify-between gap-4 mb-3">
              <div>
                {showDate && (
                  <p
                    class={cn(
                      'text-blue-400 font-medium mb-1',
                      isCompact ? 'text-xs' : 'text-sm'
                    )}
                  >
                    {formatDate(data.date)}
                  </p>
                )}
                <h3
                  class={cn(
                    'font-bold text-slate-100',
                    isCompact ? 'text-base' : 'text-xl'
                  )}
                >
                  {data.title}
                </h3>
              </div>

              <div class="flex items-center gap-2 px-2.5 py-1 rounded-full bg-blue-500/20 text-blue-300 shrink-0">
                <div class="w-4 h-4 rounded-full bg-blue-500 flex items-center justify-center">
                  <span class="text-[8px] font-bold text-white">N</span>
                </div>
                <span class="text-xs font-semibold">NASA</span>
              </div>
            </div>

            {/* Explanation */}
            {showExplanation && (
              <p
                class={cn(
                  'text-slate-400 leading-relaxed',
                  isCompact ? 'text-xs line-clamp-2' : 'text-sm'
                )}
              >
                {isCompact
                  ? truncate(data.explanation, 150)
                  : truncate(data.explanation, maxExplanationLength)}
              </p>
            )}

            {/* Footer */}
            <div
              class={cn(
                'flex items-center justify-between mt-4 pt-4 border-t border-slate-700/50',
                isCompact && 'mt-3 pt-3'
              )}
            >
              {showCopyright && data.copyright ? (
                <span class="text-xs text-slate-500">© {data.copyright}</span>
              ) : (
                <span class="text-xs text-slate-500">Bild: NASA</span>
              )}

              <div class="flex items-center gap-2">
                {data.hdurl && (
                  <a
                    href={data.hdurl}
                    target="_blank"
                    rel="noopener"
                    class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs bg-slate-700/50 hover:bg-slate-700 text-slate-300 rounded-lg transition-colors"
                  >
                    <svg
                      class="w-3.5 h-3.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                      />
                    </svg>
                    HD
                  </a>
                )}
                <a
                  href="https://apod.nasa.gov"
                  target="_blank"
                  rel="noopener"
                  class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs bg-blue-500/20 hover:bg-blue-500/30 text-blue-300 rounded-lg transition-colors"
                >
                  APOD Archive
                  <svg
                    class="w-3 h-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        )}

        {/* Hero explanation (below image) */}
        {isHero && showExplanation && (
          <div class="p-8 bg-gradient-to-b from-black to-slate-900">
            <p class="text-slate-300 leading-relaxed max-w-4xl">
              {data.explanation}
            </p>

            <div class="flex items-center gap-4 mt-6">
              {data.hdurl && (
                <a
                  href={data.hdurl}
                  target="_blank"
                  rel="noopener"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 hover:bg-white/20 text-white rounded-lg transition-colors"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                  HD-Bild öffnen
                </a>
              )}
              <a
                href="https://apod.nasa.gov"
                target="_blank"
                rel="noopener"
                class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-lg transition-colors"
              >
                APOD Archiv
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                  />
                </svg>
              </a>
            </div>
          </div>
        )}
      </div>
    )
  )
}
