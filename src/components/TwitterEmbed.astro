---
interface Props {
  tweetId: string;
  theme?: 'light' | 'dark';
  className?: string;
}

const { tweetId, theme = 'dark', className = '' } = Astro.props;

const tweetUrl = `https://twitter.com/i/status/${tweetId}`;
---

<div
  class={`mx-auto max-w-xl rounded-xl border border-slate-200 bg-white p-2 shadow-sm dark:border-slate-800 dark:bg-slate-950 ${className}`.trim()}
>
  <blockquote class="twitter-tweet" data-theme={theme}>
    <a href={tweetUrl}>Loading tweetâ€¦</a>
  </blockquote>
</div>

<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"
></script>
