---
import { tv } from 'tailwind-variants';
import Icon from './Icon.astro';

// local buttonVariants factory kept inside the ButtonBase component to
// keep related styling and logic co-located. This avoids scattering the
// variant definitions across multiple files and keeps the API surface
// simpler for internal components.
const buttonVariants = tv(
  {
    base: [
      // Prevent Tailwind Typography (.prose) from styling buttons/anchors inside prose
      'not-prose inline-flex items-center justify-center rounded-lg',
      'font-semibold no-underline transition-colors duration-150',
      'focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-offset-2',
      'focus-visible:ring-offset-white dark:focus-visible:ring-offset-slate-900',
      'disabled:pointer-events-none disabled:opacity-50',
    ].join(' '),
    variants: {
      variant: {
        primary: [
          'bg-blue-600 text-white hover:bg-blue-700 active:translate-y-px focus-visible:ring-blue-300',
          'dark:bg-blue-400 dark:text-black dark:hover:bg-blue-500 dark:focus-visible:ring-blue-200',
        ].join(' '),
        warning: [
          'bg-yellow-500 text-black hover:bg-yellow-600 focus-visible:ring-yellow-300',
          'dark:bg-yellow-300 dark:text-black dark:hover:bg-yellow-400 dark:focus-visible:ring-yellow-200',
        ].join(' '),
        secondary: [
          'border border-slate-800 bg-slate-900 text-slate-50 shadow-sm hover:bg-slate-800 hover:border-slate-700 focus-visible:ring-slate-200',
          'dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50 dark:hover:bg-slate-700 dark:hover:border-slate-600 dark:focus-visible:ring-slate-400',
        ].join(' '),
        // Ghost will behave as a plain link-like control: transparent
        // background, no visible border, and underline on hover to match
        // typical link affordances while retaining button spacing.
        ghost: [
          'bg-transparent text-slate-900 hover:underline focus-visible:ring-slate-300',
          'dark:text-slate-50 dark:hover:underline dark:focus-visible:ring-slate-500',
        ].join(' '),
        success: [
          'bg-green-600 text-white hover:bg-green-700 active:translate-y-px focus-visible:ring-green-300',
          'dark:bg-green-400 dark:text-black dark:hover:bg-green-500 dark:focus-visible:ring-green-200',
        ].join(' '),
        destructive: [
          'bg-red-600 text-white hover:bg-red-700 active:translate-y-px focus-visible:ring-red-300',
          'dark:bg-red-400 dark:text-black dark:hover:bg-red-500 dark:focus-visible:ring-red-200',
        ].join(' '),
        cyan: [
          'bg-cyan-600 text-white hover:bg-cyan-700 active:translate-y-px focus-visible:ring-cyan-300',
          'dark:bg-cyan-400 dark:text-black dark:hover:bg-cyan-500 dark:focus-visible:ring-cyan-200',
        ].join(' '),
        teal: [
          'bg-teal-600 text-white hover:bg-teal-700 active:translate-y-px focus-visible:ring-teal-300',
          'dark:bg-teal-400 dark:text-black dark:hover:bg-teal-500 dark:focus-visible:ring-teal-200',
        ].join(' '),
        purple: [
          'bg-purple-600 text-white hover:bg-purple-700 active:translate-y-px focus-visible:ring-purple-300',
          'dark:bg-purple-400 dark:text-black dark:hover:bg-purple-500 dark:focus-visible:ring-purple-200',
        ].join(' '),
        indigo: [
          'bg-indigo-600 text-white hover:bg-indigo-700 active:translate-y-px focus-visible:ring-indigo-300',
          'dark:bg-indigo-400 dark:text-black dark:hover:bg-indigo-500 dark:focus-visible:ring-indigo-200',
        ].join(' '),
        info: [
          'bg-sky-600 text-white hover:bg-sky-700 active:translate-y-px focus-visible:ring-sky-300',
          'dark:bg-sky-400 dark:text-black dark:hover:bg-sky-500 dark:focus-visible:ring-sky-200',
        ].join(' '),
      },
      size: {
        sm: 'h-9 px-3 text-sm min-h-[36px] min-w-[36px]',
        md: 'h-10 px-4 text-sm min-h-[40px] min-w-[40px]',
        lg: 'h-12 px-6 text-base min-h-[48px] min-w-[48px]',
      },
      loading: {
        true: 'cursor-wait opacity-90 relative',
      },
    },
    defaultVariants: {
      variant: 'primary',
      size: 'md',
      loading: false,
    },
    compoundVariants: [
      {
        loading: true,
        class: 'disabled:opacity-60',
      },
    ],
  },
  { twMerge: true }
);

/**
 * ButtonBase - Shared styling and logic for Button and ButtonLink components
 * Provides consistent appearance, accessibility, and behavior across button variants
 */

export interface ButtonBaseProps {
  /** Visual style variant */
  variant?:
    | 'primary'
    | 'secondary'
    | 'ghost'
    | 'success'
    | 'destructive'
    | 'warning'
    | 'cyan'
    | 'teal'
    | 'purple'
    | 'indigo'
    | 'info';
  /** Size variant */
  size?: 'sm' | 'md' | 'lg';
  /** Loading state (shows spinner, disables content) */
  loading?: boolean;
  /** Accessible label announced while loading */
  loadingLabel?: string;
  /** Additional CSS classes */
  class?: string;
  /** ARIA label for accessibility */
  ariaLabel?: string;
  /** Whether the component is disabled */
  disabled?: boolean;
  /** Optional icon name (renders using Icon component before the content) */
  icon?: string;
  /** Optional id attribute for DOM selection or JS hooks */
  id?: string;
}

interface Props extends ButtonBaseProps {
  /** Element type to render - 'button' or 'a' */
  as: 'button' | 'a';
  /** Button type (only for button elements) */
  type?: 'button' | 'submit' | 'reset';
  /** Link href (only for anchor elements) */
  href?: string;
  /** Link target */
  target?: '_blank' | '_self' | '_parent' | '_top';
  /** Link rel attribute */
  rel?: string;
  /** Whether to force external link behavior */
  external?: boolean;
  /** Screen reader text for external links */
  externalLabel?: string;
  /** Additional HTML attributes */
  [key: string]: any;
}

const {
  as,
  variant = 'primary',
  size = 'md',
  class: className = '',
  ariaLabel,
  id,
  disabled = false,
  loading = false,
  loadingLabel = 'Loading',
  icon,
  type = 'button',
  href,
  target,
  rel,
  external,
  externalLabel = 'opens in new window',
  ...rest
} = Astro.props;

// tailwind-variants powered class builder consolidating base, size & visual variants
const finalClasses = buttonVariants({
  variant,
  size,
  loading,
  class: className,
});

// External link detection and configuration
const isExternalByUrl = href && /^https?:\/\//i.test(href);
const isExternal =
  external !== undefined ? external : target === '_blank' || isExternalByUrl;
const finalTarget = isExternal ? '_blank' : target || '_self';
const finalRel = isExternal
  ? `noopener noreferrer${rel ? ` ${rel}` : ''}`
  : rel;

// Remove component-specific props from forwarded attributes
const forwardedAttrs = (() => {
  const excluded = [
    'as',
    'variant',
    'size',
    'class',
    'ariaLabel',
    'disabled',
    'loading',
    'loadingLabel',
    'type',
    'href',
    'target',
    'rel',
    'external',
    'externalLabel',
    'icon',
  ];
  const result: Record<string, any> = {};
  for (const [key, value] of Object.entries(rest)) {
    if (!excluded.includes(key)) {
      result[key] = value;
    }
  }
  return result;
})();
---

{
  as === 'a' ? (
    <a
      href={href}
      class={finalClasses}
      id={id}
      aria-label={ariaLabel}
      aria-busy={loading ? 'true' : undefined}
      target={finalTarget}
      rel={finalRel}
      {...forwardedAttrs}
    >
      {loading && (
        <span class="mr-2 inline-flex h-4 w-4 animate-spin" aria-hidden="true">
          <svg viewBox="0 0 24 24" class="h-4 w-4 text-current">
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
              fill="none"
            />
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"
            />
          </svg>
        </span>
      )}
      {loading && <span class="sr-only">{loadingLabel}</span>}
      {icon && !loading && (
        <Icon
          name={icon}
          size={size === 'sm' ? 'sm' : size === 'lg' ? 'lg' : 'md'}
          decorative={!!ariaLabel}
          ariaLabel={ariaLabel ? undefined : icon}
          className={size === 'sm' ? 'mr-1.5' : size === 'lg' ? 'mr-3' : 'mr-2'}
        />
      )}
      <slot name="iconLeft" />
      <slot />
      {isExternal && (
        <>
          <span class="sr-only"> ({externalLabel})</span>
          <svg
            aria-hidden="true"
            class="ml-2 h-3.5 w-3.5 shrink-0 text-inherit"
            viewBox="0 0 20 20"
            fill="none"
          >
            <path
              d="M5 5h4m0 0h6m-6 0v6m6-6-9.5 9.5"
              stroke="currentColor"
              stroke-width="1.6"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </>
      )}
      <slot name="iconRight" />
    </a>
  ) : (
    <button
      type={type}
      class={finalClasses}
      id={id}
      disabled={disabled}
      aria-label={ariaLabel}
      aria-busy={loading ? 'true' : undefined}
      {...forwardedAttrs}
    >
      {loading && (
        <span class="mr-2 inline-flex h-4 w-4 animate-spin" aria-hidden="true">
          <svg viewBox="0 0 24 24" class="h-4 w-4 text-current">
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
              fill="none"
            />
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"
            />
          </svg>
        </span>
      )}
      {loading && <span class="sr-only">{loadingLabel}</span>}
      {icon && !loading && (
        <Icon
          name={icon}
          size={size === 'sm' ? 'sm' : size === 'lg' ? 'lg' : 'md'}
          decorative={!!ariaLabel}
          ariaLabel={ariaLabel ? undefined : icon}
          className={size === 'sm' ? 'mr-1.5' : size === 'lg' ? 'mr-3' : 'mr-2'}
        />
      )}
      <slot name="iconLeft" />
      <slot />
      <slot name="iconRight" />
    </button>
  )
}
