<div
  class={cn(
    'rounded-2xl bg-gradient-to-br from-slate-800/90 to-slate-900/90 border border-slate-700/50 overflow-hidden',
    className
  )}
>
  <header class="px-5 py-4 border-b border-slate-700/50 bg-lime-500/5">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div
          class="p-2.5 rounded-xl bg-gradient-to-br from-lime-500 to-emerald-600 shadow-lg shadow-lime-500/25"
        >
          <svg
            class="w-5 h-5 text-white"
            fill="none"
            stroke="currentColor"
