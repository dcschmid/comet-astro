/**
 * PollenForecast - Pollenflug-Vorhersage
 *
 * Zeigt die Pollenbelastung fÃ¼r verschiedene Regionen in Deutschland.
 *
 * API: https://opendata.dwd.de/climate_environment/health/alerts/
 */
import { cn } from '../utils/cn';

interface PollenData {
  today: string;
  tomorrow: string;
  dayafter_to: string;
}

interface RegionData {
  region_id: number;
  region_name: string;
  partregion_id: number;
  partregion_name: string;
  Pollen: Record<string, PollenData>;
}

interface Props {
  regionId?: number; // z.B. 50 fÃ¼r Baden-WÃ¼rttemberg
  showAllPollen?: boolean;
  compact?: boolean;
  className?: string;
}

const {
  regionId,
  showAllPollen = false,
  compact = false,
  className = '',
} = Astro.props;

let regions: RegionData[] = [];
let error: string | null = null;

const pollenNames: Record<string, string> = {
  Hasel: 'Hasel',
  Erle: 'Erle',
  Birke: 'Birke',
  Graeser: 'GrÃ¤ser',
  Roggen: 'Roggen',
  Beifuss: 'BeifuÃŸ',
  Ambrosia: 'Ambrosia',
  Esche: 'Esche',
};

const pollenIcons: Record<string, string> = {
  Hasel: 'ðŸŒ°',
  Erle: 'ðŸŒ³',
  Birke: 'ðŸŒ¿',
  Graeser: 'ðŸŒ¾',
  Roggen: 'ðŸŒ¾',
  Beifuss: 'ðŸŒ»',
  Ambrosia: 'ðŸŒ¼',
  Esche: 'ðŸŒ³',
};

try {
  const res = await fetch(
    'https://opendata.dwd.de/climate_environment/health/alerts/s31fg.json'
  );
  if (res.ok) {
    const data = await res.json();
    regions = data.content || [];
    if (regionId) {
      regions = regions.filter(
        (r) => r.region_id === regionId || r.partregion_id === regionId
      );
    }
    // Take first region if multiple
    if (regions.length > 1) {
      regions = [regions[0]];
    }
  } else {
    error = `Fehler (${res.status})`;
  }
} catch {
  error = 'Verbindungsfehler';
}

function getLoadLevel(value: string): {
  level: number;
  label: string;
  color: string;
} {
  const num = parseFloat(value) || 0;
  if (num === 0) return { level: 0, label: 'keine', color: 'bg-slate-600' };
  if (num <= 0.5) return { level: 1, label: 'gering', color: 'bg-emerald-500' };
  if (num <= 1)
    return { level: 2, label: 'gering-mittel', color: 'bg-lime-500' };
  if (num <= 1.5) return { level: 3, label: 'mittel', color: 'bg-yellow-500' };
  if (num <= 2)
    return { level: 4, label: 'mittel-hoch', color: 'bg-orange-500' };
  if (num <= 2.5) return { level: 5, label: 'hoch', color: 'bg-red-500' };
  return { level: 6, label: 'sehr hoch', color: 'bg-purple-500' };
}

// Utility function to check for any active pollen
// const _hasAnyPollen = (pollen: Record<string, PollenData>): boolean => {
//   return Object.values(pollen).some(p =>
//     parseFloat(p.today) > 0 || parseFloat(p.tomorrow) > 0
//   );
// };

const region = regions[0];
const activePollen = region?.Pollen
  ? Object.entries(region.Pollen).filter(
      ([, data]) =>
        showAllPollen ||
        parseFloat(data.today) > 0 ||
        parseFloat(data.tomorrow) > 0
    )
  : [];
