      ) : activePollen.length === 0 ? (
        <div class="py-8 text-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-emerald-500/20 flex items-center justify-center">
            <span class="text-2xl">âœ“</span>
          </div>
          <p class="text-emerald-400 font-medium">Keine Pollenbelastung</p>
          <p class="text-slate-500 text-sm mt-1">
            Aktuell keine aktiven Pollen
          </p>
        </div>
      ) : (
        <>
          {/* Legend */}
          <div class="flex items-center justify-center gap-2 mb-4 text-xs">
            <span class="text-slate-500">Belastung:</span>
            <span class="flex items-center gap-1">
              <span class="w-2 h-2 rounded-full bg-emerald-500" />
              gering
            </span>
            <span class="flex items-center gap-1">
              <span class="w-2 h-2 rounded-full bg-yellow-500" />
