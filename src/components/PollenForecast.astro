            <span>Pollen</span>
            <span class="text-center">Heute</span>
            <span class="text-center">Morgen</span>
            <span class="text-center">Ãœbermorgen</span>
          </div>

          {/* Pollen Rows */}
          <div class="space-y-2">
            {activePollen.map(([key, data]) => {
              const today = getLoadLevel(data.today);
              const tomorrow = getLoadLevel(data.tomorrow);
              const dayafter = getLoadLevel(data.dayafter_to);

              return (
                <div class="grid grid-cols-4 gap-2 items-center p-2 rounded-lg bg-slate-800/30 border border-slate-700/30">
                  <div class="flex items-center gap-2">
                    <span class="text-lg">{pollenIcons[key] || 'ðŸŒ¿'}</span>
                    <span class="text-sm font-medium text-slate-200">
