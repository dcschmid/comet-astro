---
/**
 * Generic, accessible site footer
 */
interface LinkItem {
  href: string;
  label: string;
  ariaLabel?: string;
  external?: boolean;
}

interface Props {
  brand?: string;
  year?: number;
  legalLinks?: LinkItem[];
  externalLinks?: LinkItem[];
  className?: string;
}

const {
  brand = 'Your Project',
  year = new Date().getFullYear(),
  legalLinks = [],
  externalLinks = [],
  className = '',
} = Astro.props as Props;
---

<footer
  class={`mt-12 border-t border-slate-200 bg-white/80 py-6 text-slate-600 backdrop-blur dark:border-slate-800 dark:bg-slate-950/60 dark:text-slate-300 ${className}`.trim()}
  role="contentinfo"
  aria-label="Site footer"
>
  <div
    class="mx-auto flex max-w-7xl flex-col gap-4 px-4 text-sm md:flex-row md:items-center md:justify-between"
  >
    <div class="text-center font-medium md:text-left">
      &copy; {year}
      {brand}
    </div>

    {
      legalLinks.length > 0 && (
        <nav aria-label="Legal" class="flex flex-wrap justify-center gap-3">
          {legalLinks.map((l) => (
            <a
              href={l.href}
              aria-label={l.ariaLabel || l.label}
              class="inline-flex items-center gap-1 rounded-lg border border-transparent px-3 py-1.5 text-sm font-semibold text-slate-700 no-underline transition hover:bg-blue-50 hover:text-blue-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-white dark:text-slate-300 dark:hover:bg-blue-500/20 dark:hover:text-blue-200 dark:focus-visible:ring-offset-slate-900"
            >
              {l.label}
            </a>
          ))}
        </nav>
      )
    }

    {
      externalLinks.length > 0 && (
        <nav aria-label="External" class="flex flex-wrap justify-center gap-3">
          {externalLinks.map((l) => (
            <a
              href={l.href}
              target={l.external ? '_blank' : undefined}
              rel={l.external ? 'noopener noreferrer' : undefined}
              aria-label={l.ariaLabel || l.label}
              class="inline-flex.items-center gap-1 rounded-lg border border-transparent px-3 py-1.5 text-sm font-semibold text-slate-700 no-underline transition hover:bg-blue-50 hover:text-blue-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-white dark:text-slate-300 dark:hover:bg-blue-500/20 dark:hover:text-blue-200 dark:focus-visible:ring-offset-slate-900"
            >
              {l.label}
              {l.external && (
                <span class="sr-only"> (opens in new window)</span>
              )}
            </a>
          ))}
        </nav>
      )
    }
  </div>
</footer>
